
@model SAFA_ECC_Core_Clean.ViewModels.AdminViewModels.AddAuthUserViewModel

@{ 
    ViewData["Title"] = "إضافة مستخدم جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-end">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddAuth_User" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-end"></div>


                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="control-label float-end">اسم المستخدم</label>
                            <input asp-for="UserName" class="form-control text-end" />
                            <span asp-validation-for="UserName" class="text-danger float-end"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label float-end">البريد الإلكتروني</label>
                            <input asp-for="Email" class="form-control text-end" />
                            <span asp-validation-for="Email" class="text-danger float-end"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="control-label float-end">كلمة المرور</label>
                            <input asp-for="Password" type="password" class="form-control text-end" />
                            <span asp-validation-for="Password" class="text-danger float-end"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="control-label float-end">تأكيد كلمة المرور</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control text-end" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger float-end"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Role" class="control-label float-end">الدور</label>
                            <select asp-for="Role" asp-items="Html.GetEnumSelectList<SAFA_ECC_Core_Clean.ViewModels.AdminViewModels.UserRole>()" class="form-control text-end"></select>
                            <span asp-validation-for="Role" class="text-danger float-end"></span>
                        </div>


                        <div class="form-group text-end mt-4">
                            <button type="submit" class="btn btn-primary">إضافة</button>
                            <a asp-action="Index" class="btn btn-secondary me-2">إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

