@model SAFA_ECC_Core_Clean.ViewModels.AddGroupViewModel
@{
    ViewData["Title"] = "إضافة مجموعة جديدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">إضافة مجموعة جديدة</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">الرئيسية</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">الإدارة</a></li>
                        <li class="breadcrumb-item active">إضافة مجموعة</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="mdi mdi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="mdi mdi-alert-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">
                        <i class="mdi mdi-account-group me-2"></i>
                        بيانات المجموعة الجديدة
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Addgroup" method="post" id="addGroupForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GroupName" class="form-label">
                                        اسم المجموعة <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="GroupName" class="form-control" placeholder="أدخل اسم المجموعة" required>
                                    <span asp-validation-for="GroupName" class="text-danger"></span>
                                    <div class="form-text">اسم فريد للمجموعة</div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GroupTypeId" class="form-label">
                                        نوع المجموعة <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="GroupTypeId" class="form-select" required>
                                        <option value="">اختر نوع المجموعة</option>
                                        @if (Model.GroupTypes != null)
                                        {
                                            @foreach (var groupType in Model.GroupTypes)
                                            {
                                                <option value="@groupType.Value">@groupType.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="GroupTypeId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GroupDescription" class="form-label">وصف المجموعة</label>
                            <textarea asp-for="GroupDescription" class="form-control" rows="4" placeholder="أدخل وصف تفصيلي للمجموعة ومهامها"></textarea>
                            <span asp-validation-for="GroupDescription" class="text-danger"></span>
                            <div class="form-text">وصف اختياري يوضح دور ومسؤوليات هذه المجموعة</div>
                        </div>

                        <!-- معلومات إضافية -->
                        <div class="card border-light">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="mdi mdi-information-outline me-2"></i>
                                    معلومات إضافية
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">تاريخ الإنشاء</label>
                                            <input type="text" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">منشئ بواسطة</label>
                                            <input type="text" class="form-control" value="@User.Identity.Name" readonly>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isActive" checked>
                                    <label class="form-check-label" for="isActive">
                                        تفعيل المجموعة فور الإنشاء
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="text-end mt-4">
                            <a href="@Url.Action("grouplist")" class="btn btn-secondary me-2">
                                <i class="mdi mdi-arrow-left me-1"></i>
                                إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="mdi mdi-content-save me-1"></i>
                                حفظ المجموعة
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- معلومات مساعدة -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="mdi mdi-help-circle-outline me-2"></i>
                        إرشادات
                    </h5>
                </div>
                <div class="card-body">
                    <h6>نصائح لإنشاء مجموعة فعالة:</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            اختر اسماً واضحاً ومميزاً للمجموعة
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            حدد نوع المجموعة بدقة حسب الوظيفة
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            اكتب وصفاً واضحاً لمهام المجموعة
                        </li>
                        <li class="mb-2">
                            <i class="mdi mdi-check-circle text-success me-2"></i>
                            تأكد من عدم تكرار اسم المجموعة
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="mdi mdi-format-list-bulleted me-2"></i>
                        الخطوات التالية
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">بعد إنشاء المجموعة، يمكنك:</p>
                    <ol>
                        <li>تحديد صلاحيات المجموعة</li>
                        <li>إضافة مستخدمين للمجموعة</li>
                        <li>تخصيص مستويات التفويض</li>
                        <li>مراجعة وتعديل الإعدادات</li>
                    </ol>
                    
                    <div class="mt-3">
                        <a href="@Url.Action("AddgroupPermission")" class="btn btn-outline-primary btn-sm w-100">
                            <i class="mdi mdi-shield-check me-1"></i>
                            إدارة صلاحيات المجموعات
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // التحقق من صحة النموذج
            $('#addGroupForm').on('submit', function(e) {
                let isValid = true;
                let groupName = $('#GroupName').val().trim();
                let groupTypeId = $('#GroupTypeId').val();
                
                // التحقق من اسم المجموعة
                if (groupName.length < 3) {
                    isValid = false;
                    showError('GroupName', 'اسم المجموعة يجب أن يكون 3 أحرف على الأقل');
                }
                
                // التحقق من نوع المجموعة
                if (!groupTypeId) {
                    isValid = false;
                    showError('GroupTypeId', 'يجب اختيار نوع المجموعة');
                }
                
                if (!isValid) {
                    e.preventDefault();
                }
            });
            
            // إزالة رسائل الخطأ عند الكتابة
            $('input, select, textarea').on('input change', function() {
                $(this).removeClass('is-invalid');
                $(this).siblings('.text-danger').text('');
            });
        });
        
        function showError(fieldName, message) {
            let field = $(`[name="${fieldName}"]`);
            field.addClass('is-invalid');
            field.siblings('.text-danger').text(message);
        }
    </script>
}

<style>
    .form-check-input:checked {
        background-color: #727cf5;
        border-color: #727cf5;
    }
    
    .card-header.bg-light {
        background-color: #f8f9fa !important;
    }
    
    .list-unstyled li {
        padding: 0.25rem 0;
    }
    
    .is-invalid {
        border-color: #dc3545;
    }
    
    .text-danger {
        font-size: 0.875em;
    }
</style>

