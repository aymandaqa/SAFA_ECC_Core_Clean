<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>قائمة المستخدمين - لوحة التحكم</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container-fluid {
            padding-top: 20px;
        }
        .table th, .table td {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">قائمة المستخدمين</h1>

                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>المستخدمون</span>
                            <a asp-action="CreateUser" class="btn btn-primary">إضافة مستخدم جديد</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>اسم المستخدم</th>
                                        <th>البريد الإلكتروني</th>
                                        <th>الدور</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @model SAFA_ECC_Core_Clean.ViewModels.AdminViewModels.UserListViewModel
                                    @foreach (var user in Model.Users)
                                    
                                    {
                                        <tr>
                                            <td>@user.User_ID</td>
                                            <td>@user.UserName</td>
                                            <td>@user.Email</td>
                                            <td>@user.Role</td>
                                            <td>
                                                <a asp-action="EditUser" asp-route-id="@user.User_ID" class="btn btn-sm btn-info">تعديل</a>
                                                <a asp-action="DetailsUser" asp-route-id="@user.User_ID" class="btn btn-sm btn-secondary">تفاصيل</a>
                                                <a asp-action="DeleteUser" asp-route-id="@user.User_ID" class="btn btn-sm btn-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>