@model SAFA_ECC_Core_Clean.ViewModels.AdminViewModels.PasswordPolicyViewModel

@{ 
    ViewData["Title"] = "إدارة سياسات كلمات المرور";
}

<div class="container-fluid" dir="rtl">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">إدارة سياسات كلمات المرور</h3>
                </div>
                <div class="card-body">
                    <form asp-action="PasswordPolicies" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="MinimumLength" class="form-label">الحد الأدنى للطول</label>
                            <input asp-for="MinimumLength" class="form-control" />
                            <span asp-validation-for="MinimumLength" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RequireUppercase" class="form-check-input" />
                            <label asp-for="RequireUppercase" class="form-check-label">طلب أحرف كبيرة</label>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RequireLowercase" class="form-check-input" />
                            <label asp-for="RequireLowercase" class="form-check-label">طلب أحرف صغيرة</label>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RequireDigit" class="form-check-input" />
                            <label asp-for="RequireDigit" class="form-check-label">طلب أرقام</label>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RequireNonAlphanumeric" class="form-check-input" />
                            <label asp-for="RequireNonAlphanumeric" class="form-check-label">طلب أحرف خاصة</label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequiredUniqueChars" class="form-label"></label>
                            <input asp-for="RequiredUniqueChars" class="form-control" />
                            <span asp-validation-for="RequiredUniqueChars" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">حفظ السياسات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}