@model SAFA_ECC_Core_Clean.ViewModels.BackupRestoreViewModel

@{
    ViewData["Title"] = "النسخ الاحتياطي والاستعادة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // افتراض أن هذا هو تخطيط لوحة التحكم
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-right mb-4">@ViewData["Title"]</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white text-right">
                    النسخ الاحتياطي لقاعدة البيانات
                </div>
                <div class="card-body">
                    <form asp-action="BackupDatabase" method="post">
                        <div class="mb-3 text-right">
                            <label for="backupPath" class="form-label">مسار حفظ النسخة الاحتياطية:</label>
                            <input type="text" class="form-control" id="backupPath" name="BackupPath" value="@Model.BackupPath" />
                            <span asp-validation-for="BackupPath" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success">إنشاء نسخة احتياطية</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-warning text-white text-right">
                    استعادة قاعدة البيانات
                </div>
                <div class="card-body">
                    <form asp-action="RestoreDatabase" method="post" enctype="multipart/form-data">
                        <div class="mb-3 text-right">
                            <label for="restoreFile" class="form-label">ملف النسخة الاحتياطية للاستعادة:</label>
                            <input type="file" class="form-control" id="restoreFile" name="RestoreFile" />
                            <span asp-validation-for="RestoreFile" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-danger">استعادة قاعدة البيانات</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white text-right">
                    سجل النسخ الاحتياطي والاستعادة
                </div>
                <div class="card-body">
                    @if (Model.BackupRestoreLogs != null && Model.BackupRestoreLogs.Any())
                    {
                        <table class="table table-striped table-bordered text-right">
                            <thead>
                                <tr>
                                    <th>التاريخ والوقت</th>
                                    <th>النوع</th>
                                    <th>النتيجة</th>
                                    <th>الرسالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.BackupRestoreLogs)
                                {
                                    <tr>
                                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@log.Type</td>
                                        <td>@log.Status</td>
                                        <td>@log.Message</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center">لا توجد سجلات للنسخ الاحتياطي أو الاستعادة حتى الآن.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
