@model SAFA_ECC_Core_Clean.ViewModels.DeleteGroupViewModel

@{ 
    ViewData["Title"] = "حذف مجموعة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white text-right">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body text-right">
                    <p class="lead">هل أنت متأكد أنك تريد حذف المجموعة التالية؟</p>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.GroupId)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.GroupId)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.GroupName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.GroupName)
                        </dd>
                    </dl>

                    <form asp-action="DeleteGroup" method="post">
                        <input type="hidden" asp-for="GroupId" />
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-danger">حذف</button>
                            <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
