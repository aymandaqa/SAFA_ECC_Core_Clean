@using SAFA_ECC_Core_Clean.ViewModels
@model ReportGenerationViewModel

@{ 
    ViewData["Title"] = "توليد التقارير";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // افتراض أن هذا هو تخطيط المسؤول
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-end">
                    <h3 class="mb-0">توليد التقارير</h3>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateReport" asp-controller="Admin" method="post">
                        <div class="mb-3 text-end">
                            <label asp-for="StartDate" class="form-label">تاريخ البدء:</label>
                            <input asp-for="StartDate" type="date" class="form-control text-end" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3 text-end">
                            <label asp-for="EndDate" class="form-label">تاريخ الانتهاء:</label>
                            <input asp-for="EndDate" type="date" class="form-control text-end" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3 text-end">
                            <label asp-for="ReportType" class="form-label">نوع التقرير:</label>
                            <select asp-for="ReportType" class="form-select text-end">
                                <option value="">-- اختر نوع التقرير --</option>
                                <option value="Daily">يومي</option>
                                <option value="Monthly">شهري</option>
                                <option value="Annual">سنوي</option>
                                <option value="Custom">مخصص</option>
                            </select>
                            <span asp-validation-for="ReportType" class="text-danger"></span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model?.ValidationMessage))
                        {
                            <div class="alert alert-danger text-end" role="alert">
                                @Model.ValidationMessage
                            </div>
                        }
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">توليد التقرير</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
