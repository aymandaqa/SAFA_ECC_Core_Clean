@model SAFA_ECC_Core_Clean.ViewModels.OutwordDetailsViewModel

@{
    ViewData["Title"] = "تفاصيل التفويض الصادر";
    Layout = "~/Views/Shared/_Layout.cshtml"; // افتراض وجود ملف تخطيط عام
}

<h1 class="text-center mb-4">تفاصيل التفويض الصادر</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white text-end">
        <h4 class="mb-0">معلومات التفويض</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6 text-end">
                <p class="fw-bold">رقم التفويض:</p>
            </div>
            <div class="col-md-6 text-end">
                <p>@Model.AuthorizationNumber</p>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 text-end">
                <p class="fw-bold">تاريخ التفويض:</p>
            </div>
            <div class="col-md-6 text-end">
                <p>@Model.AuthorizationDate.ToShortDateString()</p>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 text-end">
                <p class="fw-bold">الحالة:</p>
            </div>
            <div class="col-md-6 text-end">
                <p>@Model.Status</p>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 text-end">
                <p class="fw-bold">المفوض:</p>
            </div>
            <div class="col-md-6 text-end">
                <p>@Model.AuthorizedBy</p>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 text-end">
                <p class="fw-bold">المفوض له:</p>
            </div>
            <div class="col-md-6 text-end">
                <p>@Model.AuthorizedTo</p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-info text-white text-end">
        <h4 class="mb-0">تفاصيل المعاملات</h4>
    </div>
    <div class="card-body">
        @if (Model.Transactions != null && Model.Transactions.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-end">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">رقم المعاملة</th>
                            <th scope="col">النوع</th>
                            <th scope="col">المبلغ</th>
                            <th scope="col">العملة</th>
                            <th scope="col">الوصف</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.Transactions)
                        {
                            <tr>
                                <td>@transaction.TransactionNumber</td>
                                <td>@transaction.Type</td>
                                <td>@transaction.Amount.ToString("N2")</td>
                                <td>@transaction.Currency</td>
                                <td>@transaction.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-end" role="alert">
                لا توجد معاملات مرتبطة بهذا التفويض.
            </div>
        }
    </div>
</div>

<div class="d-flex justify-content-end gap-2 mt-4">
    <a asp-action="Edit" asp-route-id="@Model.AuthorizationId" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> تعديل
    </a>
    <a asp-action="Delete" asp-route-id="@Model.AuthorizationId" class="btn btn-danger">
        <i class="bi bi-trash"></i> حذف
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-right"></i> العودة للقائمة
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
