
@using SAFA_ECC_Core_Clean.ViewModels
@model ChequesSearchViewModel

@{ 
    ViewData["Title"] = "البحث عن الشيكات";
}

<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChequeViewer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        <!-- نموذج البحث -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">معايير البحث</h5>
            </div>
            <div class="card-body">
                <form asp-action="ChequesSearch" method="get">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="ChequeNumber" class="form-label">رقم الشيك</label>
                            <input type="text" class="form-control" id="ChequeNumber" name="ChequeNumber" />
                        </div>
                        <div class="col-md-4">
                            <label for="BankName" class="form-label">اسم البنك</label>
                            <input type="text" class="form-control" id="BankName" name="BankName" />
                        </div>
                        <div class="col-md-4">
                            <label for="FromDate" class="form-label">من تاريخ</label>
                            <input type="date" class="form-control" id="FromDate" name="FromDate" />
                        </div>
                        <div class="col-md-4">
                            <label for="ToDate" class="form-label">إلى تاريخ</label>
                            <input type="date" class="form-control" id="ToDate" name="ToDate" />
                        </div>
                        <div class="col-md-4">
                            <label for="Status" class="form-label">الحالة</label>
                            <select class="form-select" id="Status" name="Status">
                                <option value="">الكل</option>
                                <option value="1">صادر</option>
                                <option value="2">وارد</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-4 text-start">
                        <button type="submit" class="btn btn-primary">بحث</button>
                        <button type="reset" class="btn btn-secondary">مسح</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- جدول عرض البيانات -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">نتائج البحث</h5>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Cheques != null && Model.Cheques.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>رقم الشيك</th>
                                    <th>اسم البنك</th>
                                    <th>المبلغ</th>
                                    <th>تاريخ الاستحقاق</th>
                                    <th>الحالة</th>
                                    <th>إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cheque in Model.Cheques)
                                {
                                    <tr>
                                        <td>@cheque.ChequeNumber</td>
                                        <td>@cheque.BankName</td>
                                        <td>@cheque.Amount.ToString("N2")</td>
                                        <td>@cheque.DueDate.ToShortDateString()</td>
                                        <td>@cheque.Status</td>
                                        <td>
                                            <a asp-action="ViewCheque" asp-route-id="@cheque.Id" class="btn btn-info btn-sm">عرض</a>
                                            <a asp-action="PrintCheque" asp-route-id="@cheque.Id" class="btn btn-success btn-sm">طباعة</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center">لا توجد شيكات لعرضها.</p>
                }
            </div>
        </div>

        <!-- أزرار الطباعة العامة -->
        <div class="text-start mb-4">
            <button type="button" class="btn btn-secondary" onclick="window.print()">طباعة الصفحة</button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
