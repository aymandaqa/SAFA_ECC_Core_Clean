@model ChequeSearchViewModel

@{ 
    ViewData["Title"] = "البحث عن الشيكات";
    Layout = "~/Views/Shared/_Layout.cshtml"; // افتراض استخدام تخطيط مشترك
}

<div class="container-fluid" dir="rtl">
    <h2 class="text-center mb-4">البحث عن الشيكات</h2>

    <!-- نموذج البحث -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">معايير البحث</h5>
        </div>
        <div class="card-body">
            <form asp-action="ChequesSearch_old" method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="ChequeNumber" class="form-label">رقم الشيك:</label>
                        <input type="text" class="form-control" id="ChequeNumber" name="ChequeNumber" value="@Model?.ChequeNumber" />
                    </div>
                    <div class="col-md-4">
                        <label for="BankName" class="form-label">اسم البنك:</label>
                        <input type="text" class="form-control" id="BankName" name="BankName" value="@Model?.BankName" />
                    </div>
                    <div class="col-md-4">
                        <label for="BeneficiaryName" class="form-label">اسم المستفيد:</label>
                        <input type="text" class="form-control" id="BeneficiaryName" name="BeneficiaryName" value="@Model?.BeneficiaryName" />
                    </div>
                    <div class="col-md-4">
                        <label for="FromDate" class="form-label">من تاريخ:</label>
                        <input type="date" class="form-control" id="FromDate" name="FromDate" value="@(Model?.FromDate.HasValue == true ? Model.FromDate.Value.ToString("yyyy-MM-dd") : "")" />
                    </div>
                    <div class="col-md-4">
                        <label for="ToDate" class="form-label">إلى تاريخ:</label>
                        <input type="date" class="form-control" id="ToDate" name="ToDate" value="@(Model?.ToDate.HasValue == true ? Model.ToDate.Value.ToString("yyyy-MM-dd") : "")" />
                    </div>
                    <div class="col-12 text-start">
                        <button type="submit" class="btn btn-success">بحث</button>
                        <a asp-action="ChequesSearch_old" class="btn btn-secondary">مسح</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول عرض البيانات -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">نتائج البحث</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Cheques != null && Model.Cheques.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered text-center">
                        <thead>
                            <tr>
                                <th>رقم الشيك</th>
                                <th>تاريخ الشيك</th>
                                <th>اسم البنك</th>
                                <th>اسم المستفيد</th>
                                <th>المبلغ</th>
                                <th>الحالة</th>
                                <th>إجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cheque in Model.Cheques)
                            {
                                <tr>
                                    <td>@cheque.ChequeNumber</td>
                                    <td>@(cheque.ChequeDate?.ToString("yyyy-MM-dd"))</td>
                                    <td>@cheque.BankName</td>
                                    <td>@cheque.BeneficiaryName</td>
                                    <td>@cheque.Amount.ToString("N2")</td>
                                    <td>@cheque.Status</td>
                                    <td>
                                        <a asp-action="ViewCheque" asp-route-id="@cheque.ChequeId" class="btn btn-info btn-sm">عرض</a>
                                        <a asp-action="PrintCheque" asp-route-id="@cheque.ChequeId" class="btn btn-secondary btn-sm">طباعة</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    لا توجد شيكات مطابقة لمعايير البحث.
                </div>
            }
        </div>
    </div>

    <!-- أزرار الطباعة العامة -->
    <div class="text-start mb-4">
        <button type="button" class="btn btn-primary" onclick="window.print()">طباعة الصفحة</button>
        <button type="button" class="btn btn-secondary" onclick="printSelectedCheques()">طباعة الشيكات المحددة</button>
    </div>
</div>

@section Scripts {
    <script>
        function printSelectedCheques() {
            // منطق لطباعة الشيكات المحددة (يمكن إضافة مربعات اختيار لكل شيك)
            alert("سيتم طباعة الشيكات المحددة.");
        }
    </script>
}
