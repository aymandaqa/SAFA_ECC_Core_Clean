@model SAFA_ECC_Core_Clean.ViewModels.ChequeViewerIndexViewModel
@{
    ViewData["Title"] = "عارض الشيكات";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-search text-primary me-2"></i>
                    عارض الشيكات
                </h2>
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#searchPanel">
                        <i class="fas fa-filter me-1"></i>البحث المتقدم
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Panel -->
    <div class="collapse @(Model.SearchModel != null && (!string.IsNullOrEmpty(Model.SearchModel.ChequeNumber) || !string.IsNullOrEmpty(Model.SearchModel.DrawerName) || Model.SearchModel.FromDate.HasValue) ? "show" : "")" id="searchPanel">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-search me-2"></i>البحث في الشيكات
                </h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label asp-for="SearchModel.ChequeNumber" class="form-label"></label>
                            <input asp-for="SearchModel.ChequeNumber" class="form-control" placeholder="أدخل رقم الشيك">
                        </div>
                        <div class="col-md-3">
                            <label asp-for="SearchModel.DrawerName" class="form-label"></label>
                            <input asp-for="SearchModel.DrawerName" class="form-control" placeholder="أدخل اسم الساحب">
                        </div>
                        <div class="col-md-3">
                            <label asp-for="SearchModel.FromDate" class="form-label"></label>
                            <input asp-for="SearchModel.FromDate" class="form-control" type="date">
                        </div>
                        <div class="col-md-3">
                            <label asp-for="SearchModel.ToDate" class="form-label"></label>
                            <input asp-for="SearchModel.ToDate" class="form-control" type="date">
                        </div>
                        <div class="col-md-3">
                            <label asp-for="SearchModel.BankId" class="form-label"></label>
                            <select asp-for="SearchModel.BankId" class="form-select">
                                <option value="">جميع البنوك</option>
                                @foreach (var bank in Model.Banks)
                                {
                                    <option value="@bank.Bank_ID">@bank.Bank_Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="SearchModel.AmountFrom" class="form-label"></label>
                            <input asp-for="SearchModel.AmountFrom" class="form-control" type="number" step="0.01" placeholder="المبلغ من">
                        </div>
                        <div class="col-md-3">
                            <label asp-for="SearchModel.AmountTo" class="form-label"></label>
                            <input asp-for="SearchModel.AmountTo" class="form-control" type="number" step="0.01" placeholder="المبلغ إلى">
                        </div>
                        <div class="col-md-3">
                            <label asp-for="SearchModel.Status" class="form-label"></label>
                            <select asp-for="SearchModel.Status" class="form-select">
                                <option value="">جميع الحالات</option>
                                <option value="Pending">في الانتظار</option>
                                <option value="Approved">معتمد</option>
                                <option value="Rejected">مرجع</option>
                                <option value="Cleared">مقاص</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i>بحث
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>مسح
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>
                    نتائج البحث (@Model.Cheques.Count شيك)
                </h5>
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-outline-success" onclick="exportToExcel()">
                        <i class="fas fa-file-excel me-1"></i>تصدير Excel
                    </button>
                    <button type="button" class="btn btn-outline-danger" onclick="exportToPDF()">
                        <i class="fas fa-file-pdf me-1"></i>تصدير PDF
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Cheques.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>رقم الشيك</th>
                                <th>اسم الساحب</th>
                                <th>المبلغ</th>
                                <th>تاريخ المعاملة</th>
                                <th>البنك</th>
                                <th>الحالة</th>
                                <th>الصور</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cheque in Model.Cheques)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">@cheque.ChequeNumber</strong>
                                    </td>
                                    <td>@cheque.BeneficiaryName</td>
                                    <td>
                                        <span class="fw-bold text-success">@cheque.Amount.ToString("N2")</span>
                                    </td>
                                    <td>@cheque.ChequeDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">@cheque.BankName</span>
                                    </td>
                                    <td>
                                        @switch (cheque.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning">في الانتظار</span>
                                                break;
                                            case "Approved":
                                                <span class="badge bg-success">معتمد</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">مرجع</span>
                                                break;
                                            case "Cleared":
                                                <span class="badge bg-primary">مقاص</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@cheque.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (cheque.ChequeImages != null && cheque.ChequeImages.Any())
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-images me-1"></i>
                                                @cheque.ChequeImages.Count
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-image-slash me-1"></i>
                                                لا توجد
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", new { id = cheque.Id })" 
                                               class="btn btn-outline-primary" title="عرض التفاصيل">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (cheque.ChequeImages != null && cheque.ChequeImages.Any())
                                            {
                                                <a href="@Url.Action("ViewImagePage", new { chequeId = cheque.Id })" 
                                                   class="btn btn-outline-info" title="عرض الصور">
                                                    <i class="fas fa-images"></i>
                                                </a>
                                            }
                                            <a href="@Url.Action("PrintCheque", new { id = cheque.Id })" 
                                               class="btn btn-outline-success" title="طباعة">
                                                <i class="fas fa-print"></i>
                                            </a>
                                            <div class="btn-group btn-group-sm">
                                                <button type="button" class="btn btn-outline-secondary dropdown-toggle" 
                                                        data-bs-toggle="dropdown" title="المزيد">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("UploadImage", new { chequeId = cheque.Id })">
                                                            <i class="fas fa-upload me-2"></i>رفع صورة
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("GeneratePDF", new { chequeId = cheque.Id })">
                                                            <i class="fas fa-file-pdf me-2"></i>تصدير PDF
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("ImageGallery", new { chequeId = cheque.Id })">
                                                            <i class="fas fa-th me-2"></i>معرض الصور
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">لا توجد شيكات مطابقة لمعايير البحث</h5>
                    <p class="text-muted">جرب تعديل معايير البحث أو إزالة بعض الفلاتر</p>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function exportToExcel() {
        // Implementation for Excel export
        alert('سيتم تطبيق تصدير Excel قريباً');
    }

    function exportToPDF() {
        // Implementation for PDF export
        alert('سيتم تطبيق تصدير PDF قريباً');
    }

    // Auto-submit form on date change
    document.addEventListener('DOMContentLoaded', function() {
        const dateInputs = document.querySelectorAll('input[type="date"]');
        dateInputs.forEach(input => {
            input.addEventListener('change', function() {
                // Optional: Auto-submit on date change
                // this.form.submit();
            });
        });
    });
</script>

<style>
    .table th {
        background-color: #f8f9fa;
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
    }
    
    .card {
        transition: box-shadow 0.15s ease-in-out;
    }
    
    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

