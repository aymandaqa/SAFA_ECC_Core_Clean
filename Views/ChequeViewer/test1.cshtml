
@using SAFA_ECC_Core_Clean.ViewModels
@{
    ViewData["Title"] = "عرض الشيكات";
    Layout = "~/Views/Shared/_Layout.cshtml"; // افتراض وجود ملف _Layout.cshtml
}

<div dir="rtl" lang="ar">
    <h1 class="text-center mb-4">عرض الشيكات</h1>

    <!-- نموذج البحث -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">بحث عن شيكات</h5>
        </div>
        <div class="card-body">
            <form>
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="chequeNumber" class="form-label">رقم الشيك</label>
                        <input type="text" class="form-control" id="chequeNumber" placeholder="أدخل رقم الشيك">
                    </div>
                    <div class="col-md-4">
                        <label for="bankName" class="form-label">اسم البنك</label>
                        <input type="text" class="form-control" id="bankName" placeholder="أدخل اسم البنك">
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">بحث</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول عرض البيانات -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">نتائج البحث</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>رقم الشيك</th>
                            <th>تاريخ الشيك</th>
                            <th>اسم المستفيد</th>
                            <th>المبلغ</th>
                            <th>البنك</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* هنا سيتم عرض بيانات الشيكات من ViewModel *@
                        <tr>
                            <td>12345</td>
                            <td>2025-09-16</td>
                            <td>أحمد محمد</td>
                            <td>1,500.00 ر.س</td>
                            <td>بنك الرياض</td>
                            <td>
                                <button class="btn btn-info btn-sm">عرض</button>
                                <button class="btn btn-success btn-sm">طباعة</button>
                            </td>
                        </tr>
                        <tr>
                            <td>67890</td>
                            <td>2025-09-15</td>
                            <td>فاطمة علي</td>
                            <td>2,000.00 ر.س</td>
                            <td>البنك الأهلي</td>
                            <td>
                                <button class="btn btn-info btn-sm">عرض</button>
                                <button class="btn btn-success btn-sm">طباعة</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- أزرار الطباعة العامة -->
    <div class="text-center mb-4">
        <button class="btn btn-secondary btn-lg mx-2">طباعة الكل</button>
        <button class="btn btn-danger btn-lg mx-2">تصدير PDF</button>
    </div>

</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
        // على سبيل المثال، معالجة البحث أو الطباعة باستخدام AJAX
        $(document).ready(function () {
            // مثال: إضافة وظيفة لزر البحث
            $(\'form\').submit(function (e) {
                e.preventDefault();
                alert(\'تم البحث عن الشيكات!\');
                // هنا يمكن إضافة منطق لجلب البيانات وتحديث الجدول
            });

            // مثال: وظيفة لزر الطباعة
            $(\'.btn-success\').click(function () {
                alert(\'طباعة الشيك المحدد!\');
            });

            // مثال: وظيفة لزر عرض
            $(\'.btn-info\').click(function () {
                alert(\'عرض تفاصيل الشيك!\');
            });

            // مثال: وظيفة لزر طباعة الكل
            $(\'.btn-secondary\').click(function () {
                alert(\'طباعة جميع الشيكات المعروضة!\');
            });

            // مثال: وظيفة لزر تصدير PDF
            $(\'.btn-danger\').click(function () {
                alert(\'تصدير الشيكات إلى PDF!\');
            });
        });
    </script>
}
