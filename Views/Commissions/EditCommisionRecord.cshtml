@model SAFA_ECC_Core_Clean.ViewModels.EditCommissionRecordViewModel
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تعديل سجل العمولة</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            direction: rtl;
            text-align: right;
        }
        .form-label {
            float: right;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>تعديل سجل العمولة</h1>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="EditCommisionRecord">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Id" class="form-label">معرف العمولة</label>
                        <input asp-for="Id" class="form-control" readonly />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CommissionDate" class="form-label">تاريخ العمولة</label>
                        <input asp-for="CommissionDate" type="date" class="form-control" />
                        <span asp-validation-for="CommissionDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label">المبلغ</label>
                        <input asp-for="Amount" type="number" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AgentName" class="form-label">اسم الوكيل</label>
                        <input asp-for="AgentName" class="form-control" />
                        <span asp-validation-for="AgentName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">الوصف</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="حفظ" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
