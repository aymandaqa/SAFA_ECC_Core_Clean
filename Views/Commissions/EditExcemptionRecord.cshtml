@using SAFA_ECC_Core_Clean.ViewModels
@model SAFA_ECC_Core_Clean.ViewModels.ExcemptionRecordViewModel
@* Commissions/EditExcemptionRecord.cshtml *@
@{
    ViewData["Title"] = "تعديل سجل استثناء";
    Layout = "_Layout"; // Assuming a shared layout that includes Bootstrap 5
}

<style>
    body {
        direction: rtl;
        text-align: right;
    }
    .form-group label {
        float: right;
    }
</style>

<h1 class="text-right">@ViewData["Title"]</h1>

<div class="container rtl">
    <form asp-action="EditExcemptionRecord">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ExcemptionId" class="control-label"></label>
                    <input asp-for="ExcemptionId" class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EmployeeName" class="control-label"></label>
                    <input asp-for="EmployeeName" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Reason" class="control-label"></label>
                    <textarea asp-for="Reason" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">حفظ</button>
            <a href="#" class="btn btn-secondary">إلغاء</a>
        </div>
    </form>
</div>
