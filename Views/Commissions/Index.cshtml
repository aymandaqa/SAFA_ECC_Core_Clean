@model SAFA_ECC_Core_Clean.ViewModels.CommissionsIndexViewModel
@{
    ViewData["Title"] = "إدارة العمولات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h2 class="page-title">
                    <i class="fas fa-percentage text-success me-2"></i>
                    إدارة العمولات والرسوم
                </h2>
                <p class="page-subtitle">إدارة شاملة لعمولات الشيكات والرسوم المصرفية</p>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.TotalCommissions</h4>
                            <p class="mb-0">إجمالي العمولات</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-list-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.ActiveCommissions</h4>
                            <p class="mb-0">العمولات النشطة</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.TotalAmount.ToString("N2")</h4>
                            <p class="mb-0">إجمالي المبالغ</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">
                                <a href="@Url.Action("Types")" class="text-white text-decoration-none">
                                    الأنواع
                                </a>
                            </h4>
                            <p class="mb-0">أنواع العمولات</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tags fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        إضافة عمولة جديدة
                    </a>
                    <a href="@Url.Action("Slices")" class="btn btn-outline-info">
                        <i class="fas fa-layer-group me-1"></i>
                        شرائح العمولات
                    </a>
                    <a href="@Url.Action("Exemptions")" class="btn btn-outline-warning">
                        <i class="fas fa-user-shield me-1"></i>
                        الإعفاءات
                    </a>
                </div>
                <div class="input-group" style="width: 300px;">
                    <input type="text" class="form-control" id="searchInput" placeholder="البحث في العمولات...">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Commissions Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-table text-primary me-2"></i>
                        قائمة العمولات
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Commissions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="commissionsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>المعرف</th>
                                        <th>نوع العمولة</th>
                                        <th>المبلغ</th>
                                        <th>العملة</th>
                                        <th>مصدر الشيك</th>
                                        <th>الوصف</th>
                                        <th>آخر تحديث</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var commission in Model.Commissions)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@commission.Id</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar avatar-sm bg-success text-white rounded-circle me-2">
                                                        <i class="fas fa-percentage"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold">@commission.CommisionType</div>
                                                        <small class="text-muted">ID: @commission.CommTypeId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">
                                                    @(commission.Amount.ToString("N2"))
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-outline-info">
                                                    @commission.CurrencyId
                                                </span>
                                            </td>
                                            <td>
                                                @commission.ChequeSource
                                            </td>
                                            <td>
                                                @commission.Description
                                            </td>
                                            <td>
                                                <div>
                                                    <div>@commission.LastUpdate?.ToString("dd/MM/yyyy HH:mm")</div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = commission.Id })" 
                                                       class="btn btn-sm btn-outline-primary" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = commission.Id })" 
                                                       class="btn btn-sm btn-outline-warning" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="deleteCommission(@commission.Id)" title="حذف">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-percentage fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">لا توجد عمولات مسجلة</h5>
                            <p class="text-muted">ابدأ بإضافة عمولة جديدة</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                إضافة عمولة جديدة
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#commissionsTable tbody tr');
            
            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Delete commission
        function deleteCommission(id) {
            if (confirm('هل أنت متأكد من حذف هذه العمولة؟')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: { id: id },
                    success: function(response) {
                        if (response.success) {
                            toastr.success(response.message);
                            location.reload();
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('حدث خطأ أثناء حذف العمولة');
                    }
                });
            }
        }

        // Initialize tooltips
        $(document).ready(function() {
            $('[title]').tooltip();
        });
    </script>
}

