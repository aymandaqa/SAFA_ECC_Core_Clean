@model SAFA_ECC_Core_Clean.ViewModels.CommissionsReportViewModel

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تقرير العمولات</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-dpuaG1suBy+9id8cH5rTsB6OgsKfA0uHXlku9IDc6j5nuk9ocflpmFbuwBBLQ8Qdb" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            direction: rtl;
            text-align: right;
        }
        .container-fluid {
            padding-top: 20px;
        }
        .card-header {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">تقرير العمولات</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="startDate" class="form-label">تاريخ البدء:</label>
                                    <input type="date" class="form-control" id="startDate" asp-for="StartDate">
                                </div>
                                <div class="col-md-6">
                                    <label for="endDate" class="form-label">تاريخ الانتهاء:</label>
                                    <input type="date" class="form-control" id="endDate" asp-for="EndDate">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="agentName" class="form-label">اسم الوكيل:</label>
                                    <input type="text" class="form-control" id="agentName" placeholder="أدخل اسم الوكيل" asp-for="AgentName">
                                </div>
                                <div class="col-md-6">
                                    <label for="commissionType" class="form-label">نوع العمولة:</label>
                                    <select class="form-select" id="commissionType" asp-for="CommissionType">
                                        <option selected>اختر نوع العمولة...</option>
                                        <option value="1">عمولة مبيعات</option>
                                        <option value="2">عمولة تحصيل</option>
                                        <option value="3">عمولة إضافية</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 text-center">
                                <button type="submit" class="btn btn-primary">عرض التقرير</button>
                                <button type="button" class="btn btn-secondary">تصدير إلى Excel</button>
                            </div>
                        </form>

                        <hr>

                        <h4>نتائج التقرير</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>تاريخ العملية</th>
                                        <th>اسم الوكيل</th>
                                        <th>نوع العمولة</th>
                                        <th>المبلغ</th>
                                        <th>الحالة</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Commissions != null && Model.Commissions.Any())
                                    {
                                        @foreach (var item in Model.Commissions)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.TransactionDate.ToShortDateString()</td>
                                                <td>@item.AgentName</td>
                                                <td>@item.CommissionType</td>
                                                <td>@item.Amount.ToString("N2")</td>
                                                <td>@item.Status</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">لا توجد بيانات لعرضها.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
