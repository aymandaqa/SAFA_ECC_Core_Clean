@using SAFA_ECC_Core_Clean.ViewModels
@model SAFA_ECC_Core_Clean.ViewModels.FacilitiesViewModels.ConcentrateEmailsSettingViewModel

@{ ViewData["Title"] = "إعدادات البريد الإلكتروني المركزية"; }

<div class="container-fluid mt-4" dir="rtl">
    <h1 class="text-end mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white text-end">
            <h5 class="mb-0">تعديل إعدادات البريد الإلكتروني</h5>
        </div>
        <div class="card-body">
            <form asp-action="UpdateConcentrateEmailsSetting" method="post">
                <div class="row mb-3">
                    <label asp-for="SenderEmail" class="col-md-3 col-form-label text-md-end">بريد المرسل الإلكتروني:</label>
                    <div class="col-md-6">
                        <input asp-for="SenderEmail" class="form-control text-end" />
                        <span asp-validation-for="SenderEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="SenderName" class="col-md-3 col-form-label text-md-end">اسم المرسل:</label>
                    <div class="col-md-6">
                        <input asp-for="SenderName" class="form-control text-end" />
                        <span asp-validation-for="SenderName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="SmtpServer" class="col-md-3 col-form-label text-md-end">خادم SMTP:</label>
                    <div class="col-md-6">
                        <input asp-for="SmtpServer" class="form-control text-end" />
                        <span asp-validation-for="SmtpServer" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="SmtpPort" class="col-md-3 col-form-label text-md-end">منفذ SMTP:</label>
                    <div class="col-md-6">
                        <input asp-for="SmtpPort" class="form-control text-end" type="number" />
                        <span asp-validation-for="SmtpPort" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="UseSsl" class="col-md-3 col-form-label text-md-end">استخدام SSL:</label>
                    <div class="col-md-6 form-check form-switch d-flex justify-content-end">
                        <input asp-for="UseSsl" class="form-check-input" type="checkbox" role="switch" id="useSslSwitch" />
                        <label class="form-check-label me-2" for="useSslSwitch"></label>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Username" class="col-md-3 col-form-label text-md-end">اسم المستخدم:</label>
                    <div class="col-md-6">
                        <input asp-for="Username" class="form-control text-end" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Password" class="col-md-3 col-form-label text-md-end">كلمة المرور:</label>
                    <div class="col-md-6">
                        <input asp-for="Password" class="form-control text-end" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-9 offset-md-3 text-end">
                        <button type="submit" class="btn btn-primary">حفظ الإعدادات</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white text-end">
            <h5 class="mb-0">سجل إعدادات البريد الإلكتروني</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered text-end">
                <thead>
                    <tr>
                        <th>تاريخ التعديل</th>
                        <th>بريد المرسل</th>
                        <th>خادم SMTP</th>
                        <th>منفذ SMTP</th>
                        <th>اسم المستخدم</th>
                        <th>مستخدم التعديل</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.History != null && Model.History.Any())
                    {
                        @foreach (var item in Model.History)
                        {
                            <tr>
                                <td>@item.ModificationDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@item.SenderEmail</td>
                                <td>@item.SmtpServer</td>
                                <td>@item.SmtpPort</td>
                                <td>@item.Username</td>
                                <td>@item.ModifiedBy</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">لا توجد سجلات لعرضها.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
