@using SAFA_ECC_Core_Clean.ViewModels
@model List<CustomerConcentrateItemViewModel>

@{
    ViewData["Title"] = "تركيز العملاء";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        direction: rtl;
        text-align: right;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">@ViewData["Title"]</h1>
            <!-- Placeholder for content -->
        </div>
    </div>
</div>




<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">بحث وتصفية</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="customerName" class="form-label">اسم العميل</label>
                    <input type="text" class="form-control" id="customerName" placeholder="أدخل اسم العميل">
                </div>
                <div class="col-md-4">
                    <label for="region" class="form-label">المنطقة</label>
                    <select class="form-select" id="region">
                        <option selected>اختر منطقة...</option>
                        <option value="1">الرياض</option>
                        <option value="2">جدة</option>
                        <option value="3">الدمام</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">بحث</button>
                    <button type="reset" class="btn btn-secondary">مسح</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">بيانات تركيز العملاء</h5>
        <button class="btn btn-success">إضافة عميل جديد</button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">اسم العميل</th>
                        <th scope="col">المنطقة</th>
                        <th scope="col">نسبة التركيز</th>
                        <th scope="col">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.CustomerName</td>
                                <td>@item.Region</td>
                                <td>@item.ConcentrationPercentage%</td>
                                <td>
                                    <button class="btn btn-info btn-sm">عرض</button>
                                    <button class="btn btn-warning btn-sm">تعديل</button>
                                    <button class="btn btn-danger btn-sm">حذف</button>
                                </td>
                            </tr>
                        }
                    }



                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">لا توجد بيانات لعرضها.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

</div>
