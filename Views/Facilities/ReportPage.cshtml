@using SAFA_ECC_Core_Clean.ViewModels
@model ReportViewModel // افتراض أن هذا هو ViewModel المناسب

@{ 
    ViewData["Title"] = "تقرير المرافق";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-end mb-4">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-header text-end">
            <h3>معايير البحث</h3>
        </div>
        <div class="card-body">
            <form>
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="startDate" class="form-label text-end w-100">تاريخ البدء:</label>
                        <input type="date" class="form-control text-end" id="startDate">
                    </div>
                    <div class="col-md-4">
                        <label for="endDate" class="form-label text-end w-100">تاريخ الانتهاء:</label>
                        <input type="date" class="form-control text-end" id="endDate">
                    </div>
                    <div class="col-md-4">
                        <label for="facilityType" class="form-label text-end w-100">نوع المرفق:</label>
                        <select class="form-select text-end" id="facilityType">
                            <option selected>اختر...</option>
                            <option value="1">مرفق 1</option>
                            <option value="2">مرفق 2</option>
                            <option value="3">مرفق 3</option>
                        </select>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary">بحث</button>
                        <button type="reset" class="btn btn-secondary">مسح</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header text-end">
            <h3>نتائج التقرير</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-end">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>اسم المرفق</th>
                            <th>النوع</th>
                            <th>الحالة</th>
                            <th>تاريخ الإنشاء</th>
                            <th>إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* هنا يتم عرض البيانات من Model.Items *@
                        @if (Model != null && Model.Items != null)
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>@item.Status</td>
                                    <td>@item.CreationDate.ToShortDateString()</td>
                                    <td>
                                        <a href="#" class="btn btn-info btn-sm">عرض</a>
                                        <a href="#" class="btn btn-warning btn-sm">تعديل</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">لا توجد بيانات لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-success me-2">تصدير إلى Excel</button>
                <button class="btn btn-danger">طباعة</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
        $(document).ready(function () {
            // تهيئة أي مكونات Bootstrap JavaScript إذا لزم الأمر
        });
    </script>
}
