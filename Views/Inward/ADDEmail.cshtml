@using SAFA_ECC_Core_Clean.ViewModels

@model SAFA_ECC_Core_Clean.ViewModels.InwardViewModels.AddEmailViewModel

@{
    ViewData["Title"] = "إضافة بريد إلكتروني";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">إضافة بريد إلكتروني جديد</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ADDEmail" method="post">
                        <div class="mb-3">
                            <label asp-for="EmailAddress" class="form-label">عنوان البريد الإلكتروني</label>
                            <input asp-for="EmailAddress" class="form-control" type="email" placeholder="أدخل عنوان البريد الإلكتروني" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CustomerName" class="form-label">اسم العميل</label>
                            <input asp-for="CustomerName" class="form-control" placeholder="أدخل اسم العميل" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EmailType" class="form-label">نوع البريد الإلكتروني</label>
                            <select asp-for="EmailType" class="form-select">
                                <option value="">اختر نوع البريد</option>
                                <option value="Personal">شخصي</option>
                                <option value="Work">عمل</option>
                                <option value="Other">أخرى</option>
                            </select>
                            <span asp-validation-for="EmailType" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">إضافة</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <div class="row justify-content-center">
        <div class="col-md-10">
            <h3 class="text-center mb-4">قائمة رسائل البريد الإلكتروني</h3>
            @if (Model.Emails != null && Model.Emails.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">عنوان البريد الإلكتروني</th>
                                <th scope="col">اسم العميل</th>
                                <th scope="col">نوع البريد الإلكتروني</th>
                                <th scope="col">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var email in Model.Emails)
                            {
                                <tr>
                                    <td>@email.EmailAddress</td>
                                    <td>@email.CustomerName</td>
                                    <td>@email.EmailType</td>
                                    <td>
                                        <a asp-action="EditEmail" asp-route-id="@email.Id" class="btn btn-sm btn-info text-white">تعديل</a>
                                        <a asp-action="DeleteEmail" asp-route-id="@email.Id" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    لا توجد رسائل بريد إلكتروني لعرضها حاليًا.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
