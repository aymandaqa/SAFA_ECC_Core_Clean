@model IEnumerable<SAFA_ECC_Core_Clean.Models.Email>

@{
    ViewData["Title"] = "إدارة البريد الإلكتروني";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title">
                        <i class="fas fa-envelope"></i>
                        إدارة البريد الإلكتروني
                    </h3>
                    <div class="card-tools">
                        <a asp-action="AddEmail" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> إضافة بريد جديد
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="emailTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>المعرف</th>
                                    <th>إلى</th>
                                    <th>الموضوع</th>
                                    <th>تاريخ الإرسال</th>
                                    <th>المرسل</th>
                                    <th>الحالة</th>
                                    <th>الأولوية</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EmailId</td>
                                        <td>@item.ToEmail</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.SentBy</td>
                                        <td>
                                            @switch (item.Status)
                                            {
                                                case "SENT":
                                                    <span class="badge bg-success">مرسل</span>
                                                    break;
                                                case "PENDING":
                                                    <span class="badge bg-warning">معلق</span>
                                                    break;
                                                case "FAILED":
                                                    <span class="badge bg-danger">فشل</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@item.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @if (item.HighPriority)
                                            {
                                                <span class="badge bg-danger">عالية</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">عادية</span>
                                            }
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-info" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#viewModal"
                                                    data-email-id="@item.EmailId"
                                                    data-subject="@item.Subject"
                                                    data-body="@item.Body">
                                                <i class="fas fa-eye"></i> عرض
                                            </button>
                                            @if (item.Status == "FAILED")
                                            {
                                                <button type="button" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-redo"></i> إعادة إرسال
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">تفاصيل البريد الإلكتروني</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <strong>الموضوع:</strong>
                    <p id="modalSubject"></p>
                </div>
                <div class="mb-3">
                    <strong>المحتوى:</strong>
                    <div id="modalBody" style="border: 1px solid #ddd; padding: 10px; border-radius: 5px; background-color: #f9f9f9;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#emailTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Arabic.json"
                },
                "order": [[0, "desc"]],
                "pageLength": 25
            });

            $('#viewModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var subject = button.data('subject');
                var body = button.data('body');
                
                $('#modalSubject').text(subject);
                $('#modalBody').html(body);
            });
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css">
}

