@model IEnumerable<SAFA_ECC_Core_Clean.Models.Inward_Trans>

@{
    ViewData["Title"] = "إصلاح الشيكات المرتجعة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-tools"></i>
                        إصلاح الشيكات المرتجعة
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="returnedChequesTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>الرقم المسلسل</th>
                                    <th>رقم الشيك</th>
                                    <th>رقم الحساب</th>
                                    <th>المبلغ</th>
                                    <th>تاريخ الإرجاع</th>
                                    <th>سبب الإرجاع</th>
                                    <th>الحالة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Serial</td>
                                        <td>@item.DrwChqNo</td>
                                        <td>@item.ISSAccount</td>
                                        <td class="text-end">@item.Amount?.ToString("N3")</td>
                                        <td>@item.ReturnDate?.ToString("dd/MM/yyyy")</td>
                                        <td>@item.ReturnCode</td>
                                        <td>
                                            <span class="badge bg-danger">@item.Status</span>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-primary" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#fixModal"
                                                    data-serial="@item.Serial"
                                                    data-chqno="@item.ChqNo">
                                                <i class="fas fa-wrench"></i> إصلاح
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Fix Modal -->
<div class="modal fade" id="fixModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="FixReturnedCheque" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">إصلاح الشيك المرتجع</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="fixSerial" name="id" />
                    
                    <div class="mb-3">
                        <label for="fixReason" class="form-label">سبب الإصلاح</label>
                        <textarea class="form-control" id="fixReason" name="fixReason" rows="3" required></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="newStatus" class="form-label">الحالة الجديدة</label>
                        <select class="form-select" id="newStatus" name="newStatus" required>
                            <option value="">اختر الحالة الجديدة</option>
                            <option value="ACCEPTED">مقبول</option>
                            <option value="PENDING">معلق</option>
                            <option value="REVIEW">تحت المراجعة</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> حفظ الإصلاح
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#returnedChequesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Arabic.json"
                },
                "order": [[0, "desc"]],
                "pageLength": 25
            });

            $('#fixModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var serial = button.data('serial');
                var chqno = button.data('chqno');
                
                $('#fixSerial').val(serial);
                $('.modal-title').html('إصلاح الشيك رقم: ' + chqno);
            });
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css">
}

