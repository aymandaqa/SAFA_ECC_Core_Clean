@page
@model SAFA_ECC_Core_Clean.ViewModels.FixRetCHQViewModel

@{ 
    ViewData["Title"] = "سند قبض شيكات آجلة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <h2 class="text-center mb-4">سند قبض شيكات آجلة</h2>

    <!-- هنا سيتم إضافة المحتوى الخاص بالنماذج والجداول والأزرار -->

</div>



<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white text-end">
        <h5 class="mb-0">بيانات الشيك</h5>
    </div>
    <div class="card-body">
        <form dir="rtl">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="chqNumber" class="form-label">رقم الشيك</label>
                    <input type="text" class="form-control text-end" id="chqNumber" placeholder="أدخل رقم الشيك">
                </div>
                <div class="col-md-6">
                    <label for="chqDate" class="form-label">تاريخ الشيك</label>
                    <input type="date" class="form-control text-end" id="chqDate">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="bankName" class="form-label">اسم البنك</label>
                    <input type="text" class="form-control text-end" id="bankName" placeholder="أدخل اسم البنك">
                </div>
                <div class="col-md-6">
                    <label for="amount" class="form-label">المبلغ</label>
                    <input type="number" class="form-control text-end" id="amount" placeholder="أدخل المبلغ">
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">الوصف</label>
                <textarea class="form-control text-end" id="description" rows="3" placeholder="أدخل وصف الشيك"></textarea>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">حفظ</button>
                <button type="reset" class="btn btn-secondary me-2">إلغاء</button>
            </div>
        </form>
    </div>
</div>



<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white text-end">
        <h5 class="mb-0">الشيكات المسجلة</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover text-end">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">رقم الشيك</th>
                        <th scope="col">تاريخ الشيك</th>
                        <th scope="col">اسم البنك</th>
                        <th scope="col">المبلغ</th>
                        <th scope="col">الوصف</th>
                        <th scope="col">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>12345</td>
                        <td>2025-01-15</td>
                        <td>بنك القاهرة عمان</td>
                        <td>1500.00</td>
                        <td>شيك إيجار شهر يناير</td>
                        <td>
                            <button class="btn btn-sm btn-info">عرض</button>
                            <button class="btn btn-sm btn-warning">تعديل</button>
                            <button class="btn btn-sm btn-danger">حذف</button>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>67890</td>
                        <td>2025-02-20</td>
                        <td>البنك العربي</td>
                        <td>2500.00</td>
                        <td>شيك دفعة أولى</td>
                        <td>
                            <button class="btn btn-sm btn-info">عرض</button>
                            <button class="btn btn-sm btn-warning">تعديل</button>
                            <button class="btn btn-sm btn-danger">حذف</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            // يمكنك إضافة أي منطق JavaScript هنا، مثل التحقق من صحة النموذج أو التعامل مع الأحداث
            console.log("صفحة سند قبض شيكات آجلة جاهزة!");

            // مثال: إضافة حدث لزر الحفظ
            $(\'form\').on(\'submit\', function (e) {
                e.preventDefault(); // منع الإرسال الافتراضي للنموذج
                alert(\'تم النقر على زر الحفظ! (هذا مجرد مثال)\');
                // هنا يمكنك إضافة منطق إرسال البيانات إلى الخادم باستخدام AJAX
            });
        });
    </script>
}