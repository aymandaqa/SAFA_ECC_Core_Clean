@model SAFA_ECC_Core_Clean.ViewModels.InwardViewModels.InwardIndexViewModel

@{
    ViewData["Title"] = "الشيكات الواردة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-arrow-down me-2"></i>
                            الشيكات الواردة
                        </h4>
                        <div>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>
                                إضافة شيك وارد
                            </a>
                            <a asp-action="Statistics" class="btn btn-info">
                                <i class="fas fa-chart-bar me-1"></i>
                                الإحصائيات
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Search Form -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="SearchModel.ChqSequance" class="form-label"></label>
                                <input asp-for="SearchModel.ChqSequance" class="form-control" placeholder="رقم التسلسل" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.DrwChqNo" class="form-label"></label>
                                <input asp-for="SearchModel.DrwChqNo" class="form-control" placeholder="رقم الشيك" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.DrwAcctNo" class="form-label"></label>
                                <input asp-for="SearchModel.DrwAcctNo" class="form-control" placeholder="رقم الحساب" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.BenName" class="form-label"></label>
                                <input asp-for="SearchModel.BenName" class="form-control" placeholder="اسم المستفيد" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.FromDate" class="form-label"></label>
                                <input asp-for="SearchModel.FromDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.ToDate" class="form-label"></label>
                                <input asp-for="SearchModel.ToDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.MinAmount" class="form-label"></label>
                                <input asp-for="SearchModel.MinAmount" class="form-control" placeholder="أقل مبلغ" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.MaxAmount" class="form-label"></label>
                                <input asp-for="SearchModel.MaxAmount" class="form-control" placeholder="أكبر مبلغ" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.Status" class="form-label"></label>
                                <select asp-for="SearchModel.Status" class="form-select">
                                    <option value="">جميع الحالات</option>
                                    <option value="NEW">جديد</option>
                                    <option value="PENDING">في الانتظار</option>
                                    <option value="AUTHORIZED">معتمد</option>
                                    <option value="RETURNED">مرجع</option>
                                    <option value="POSTED">مرحل</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-1"></i>
                                        بحث
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Results Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>التسلسل</th>
                                    <th>رقم الشيك</th>
                                    <th>رقم الحساب</th>
                                    <th>المبلغ</th>
                                    <th>اسم المستفيد</th>
                                    <th>تاريخ المعاملة</th>
                                    <th>الحالة</th>
                                    <th>العمليات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Transactions.Any())
                                {
                                    @foreach (var item in Model.Transactions)
                                    {
                                        <tr>
                                            <td>@item.Serial</td>
                                            <td>@item.DrwChqNo</td>
                                            <td>@item.DrwAcctNo</td>
                                            <td class="text-end">
                                                <span class="fw-bold text-success">
                                                    @(item.Amount?.ToString("N2")) @item.Currency
                                                </span>
                                            </td>
                                            <td>@item.BenName</td>
                                            <td>@item.TransDate?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case "NEW":
                                                        <span class="badge bg-info">جديد</span>
                                                        break;
                                                    case "PENDING":
                                                        <span class="badge bg-warning">في الانتظار</span>
                                                        break;
                                                    case "AUTHORIZED":
                                                        <span class="badge bg-success">معتمد</span>
                                                        break;
                                                    case "RETURNED":
                                                        <span class="badge bg-danger">مرجع</span>
                                                        break;
                                                    case "POSTED":
                                                        <span class="badge bg-primary">مرحل</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@item.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Serial" 
                                                       class="btn btn-sm btn-outline-primary" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Serial" 
                                                       class="btn btn-sm btn-outline-warning" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                                <p>لا توجد شيكات واردة</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Transactions.Count == 100)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            تم عرض أول 100 نتيجة فقط. يرجى استخدام البحث لتضييق النتائج.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit form on status change
        document.querySelector('select[name="SearchModel.Status"]').addEventListener('change', function() {
            this.form.submit();
        });

        // Format currency inputs
        document.querySelectorAll('input[name*="Amount"]').forEach(function(input) {
            input.addEventListener('input', function() {
                let value = this.value.replace(/[^\d.]/g, '');
                if (value) {
                    this.value = parseFloat(value).toLocaleString('en-US', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    });
                }
            });
        });
    </script>
}

