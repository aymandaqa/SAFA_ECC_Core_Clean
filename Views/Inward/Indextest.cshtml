@model SAFA_ECC_Core_Clean.ViewModels.IndextestViewModel

@{
    ViewData["Title"] = "اختبار الفهرس";
}

<h1 class="text-center mb-4">صفحة اختبار الفهرس</h1>

<div class="container-fluid" dir="rtl">
    <div class="row">
        <div class="col-12">
            <p>@Model.Message</p>
            <ul>
                @foreach (var item in Model.Items)
                {
                    <li>@item</li>
                }
            </ul>

            <hr />

            <h3>نموذج إدخال</h3>
            <form>
                <div class="mb-3">
                    <label for="inputField" class="form-label">حقل الإدخال:</label>
                    <input type="text" class="form-control" id="inputField" value="@Model.InputField">
                </div>
                <button type="submit" class="btn btn-primary">إرسال</button>
                <button type="button" class="btn btn-secondary">إلغاء</button>
            </form>

            <hr />

            <h3>جدول البيانات</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>الرقم</th>
                        <th>الاسم</th>
                        <th>الكمية</th>
                        <th>السعر</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TableData)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button class="btn btn-success me-md-2" type="button">زر جديد 1</button>
                <button class="btn btn-danger" type="button">زر جديد 2</button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <style>
        body {
            direction: rtl;
            text-align: right;
        }
    </style>
}
