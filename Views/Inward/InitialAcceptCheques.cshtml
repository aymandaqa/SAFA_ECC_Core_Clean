@using SAFA_ECC_Core_Clean.ViewModels
@model InitialAcceptChequesViewModel

@{ 
    ViewData["Title"] = "قبول الشيكات الأولية الواردة";
}

<div class="container-fluid" dir="rtl">
    <h1 class="mt-4 text-right">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-header text-right">
            <i class="fas fa-search ml-1"></i>
            بحث وفلترة الشيكات
        </div>
        <div class="card-body">
            <form>
                <div class="row form-group text-right">
                    <div class="col-md-4">
                        <label for="checkNumber">رقم الشيك:</label>
                        <input type="text" class="form-control" id="checkNumber" placeholder="أدخل رقم الشيك">
                    </div>
                    <div class="col-md-4">
                        <label for="customerName">اسم العميل:</label>
                        <input type="text" class="form-control" id="customerName" placeholder="أدخل اسم العميل">
                    </div>
                    <div class="col-md-4">
                        <label for="dueDate">تاريخ الاستحقاق:</label>
                        <input type="date" class="form-control" id="dueDate">
                    </div>
                </div>
                <div class="row form-group text-right mt-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">بحث</button>
                        <button type="reset" class="btn btn-secondary">مسح الفلاتر</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header text-right">
            <i class="fas fa-table ml-1"></i>
            الشيكات الواردة
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-right" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>رقم الشيك</th>
                            <th>اسم العميل</th>
                            <th>المبلغ</th>
                            <th>تاريخ الاستحقاق</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* هنا سيتم عرض بيانات الشيكات من ViewModel *@
                        @if (Model != null && Model.Cheques != null)
                        {
                            foreach (var cheque in Model.Cheques)
                            {
                                <tr>
                                    <td>@cheque.CheckNumber</td>
                                    <td>@cheque.CustomerName</td>
                                    <td>@cheque.Amount.ToString("N2")</td>
                                    <td>@cheque.DueDate.ToShortDateString()</td>
                                    <td>@cheque.Status</td>
                                    <td>
                                        <button class="btn btn-success btn-sm">قبول</button>
                                        <button class="btn btn-danger btn-sm">رفض</button>
                                        <button class="btn btn-info btn-sm">تفاصيل</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">لا توجد شيكات لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @* ترقيم الصفحات *@
            <nav aria-label="Page navigation example" class="mt-3">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled"><a class="page-link" href="#">السابق</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">التالي</a></li>
                </ul>
            </nav>
        </div>
    </div>

    @* نماذج منبثقة (Modals) - مثال *@
    <div class="modal fade" id="acceptModal" tabindex="-1" role="dialog" aria-labelledby="acceptModalLabel" aria-hidden="true" dir="rtl">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="acceptModalLabel">تأكيد القبول</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-right">
                    هل أنت متأكد من قبول هذا الشيك؟
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-success">قبول</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true" dir="rtl">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">تأكيد الرفض</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-right">
                    هل أنت متأكد من رفض هذا الشيك؟
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger">رفض</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true" dir="rtl">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel">تفاصيل الشيك</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-right">
                    @* هنا سيتم عرض تفاصيل الشيك المحدد *@
                    <p><strong>رقم الشيك:</strong> <span id="detailCheckNumber"></span></p>
                    <p><strong>اسم العميل:</strong> <span id="detailCustomerName"></span></p>
                    <p><strong>المبلغ:</strong> <span id="detailAmount"></span></p>
                    <p><strong>تاريخ الاستحقاق:</strong> <span id="detailDueDate"></span></p>
                    <p><strong>الحالة:</strong> <span id="detailStatus"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // يمكنك إضافة JavaScript هنا للتعامل مع البحث، الفلترة، الأزرار، والنماذج المنبثقة
            // مثال: عند النقر على زر التفاصيل، قم بملء بيانات النموذج المنبثق
            $(\.btn-info\).on(\'click\', function () {
                // افتراض أن البيانات موجودة في صف الجدول
                var row = $(this).closest(\'tr\');
                $(\'#detailCheckNumber\').text(row.find(\'td:eq(0)\').text());
                $(\'#detailCustomerName\').text(row.find(\'td:eq(1)\').text());
                $(\'#detailAmount\').text(row.find(\'td:eq(2)\').text());
                $(\'#detailDueDate\').text(row.find(\'td:eq(3)\').text());
                $(\'#detailStatus\').text(row.find(\'td:eq(4)\').text());
                $(\'#detailsModal\').modal(\'show\');
            });

            // تفعيل أزرار القبول والرفض (مثال)
            $(\.btn-success\).on(\'click\', function () {
                $(\'#acceptModal\').modal(\'show\');
            });

            $(\.btn-danger\).on(\'click\', function () {
                $(\'#rejectModal\').modal(\'show\');
            });
        });
    </script>
}