@using SAFA_ECC_Core_Clean.ViewModels
@{
    ViewData["Title"] = "الشيكات المرفوضة الأولية الواردة";
}

<style>
    body {
        direction: rtl;
        text-align: right;
    }
    .container-fluid {
        padding-right: var(--bs-gutter-x, 0.75rem);
        padding-left: var(--bs-gutter-x, 0.75rem);
    }
</style>

<div class="container-fluid">
    <h1 class="mt-4 mb-4">@ViewData["Title"]</h1>

    <!-- Placeholder for content -->

</div>




<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">بحث وتصفية الشيكات</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="chequeNumber" class="form-label">رقم الشيك</label>
                    <input type="text" class="form-control" id="chequeNumber" placeholder="أدخل رقم الشيك">
                </div>
                <div class="col-md-4">
                    <label for="bankName" class="form-label">اسم البنك</label>
                    <select class="form-select" id="bankName">
                        <option selected>اختر البنك...</option>
                        <option value="1">بنك 1</option>
                        <option value="2">بنك 2</option>
                        <option value="3">بنك 3</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">بحث</button>
                    <button type="reset" class="btn btn-secondary">مسح</button>
                </div>
            </div>
        </form>
    </div>
</div>




<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">قائمة الشيكات المرفوضة الأولية</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>رقم الشيك</th>
                        <th>اسم البنك</th>
                        <th>المبلغ</th>
                        <th>تاريخ الرفض</th>
                        <th>السبب</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @* Placeholder for data from ViewModel *@
                    <tr>
                        <td>123456</td>
                        <td>بنك الرياض</td>
                        <td>1500.00</td>
                        <td>2025-09-15</td>
                        <td>توقيع غير مطابق</td>
                        <td>
                            <button class="btn btn-sm btn-info">عرض</button>
                            <button class="btn btn-sm btn-danger">رفض نهائي</button>
                        </td>
                    </tr>
                    <tr>
                        <td>789012</td>
                        <td>البنك الأهلي</td>
                        <td>250.50</td>
                        <td>2025-09-14</td>
                        <td>عدم كفاية الرصيد</td>
                        <td>
                            <button class="btn btn-sm btn-info">عرض</button>
                            <button class="btn btn-sm btn-danger">رفض نهائي</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>




<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">تفاصيل الشيك المحدد</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">رقم الشيك:</dt>
                    <dd class="col-sm-8" id="detailChequeNumber">-</dd>

                    <dt class="col-sm-4">اسم البنك:</dt>
                    <dd class="col-sm-8" id="detailBankName">-</dd>

                    <dt class="col-sm-4">المبلغ:</dt>
                    <dd class="col-sm-8" id="detailAmount">-</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">تاريخ الرفض:</dt>
                    <dd class="col-sm-8" id="detailRejectDate">-</dd>

                    <dt class="col-sm-4">سبب الرفض:</dt>
                    <dd class="col-sm-8" id="detailReason">-</dd>

                    <dt class="col-sm-4">حالة الشيك:</dt>
                    <dd class="col-sm-8" id="detailStatus">-</dd>
                </dl>
            </div>
        </div>
        <div class="mt-3 text-start">
            <button class="btn btn-success" id="approveChequeBtn">قبول الشيك</button>
            <button class="btn btn-warning" id="returnChequeBtn">إرجاع الشيك</button>
        </div>
    </div>
</div>
