@using SAFA_ECC_Core_Clean.ViewModels
@model InsufficientFundsViewModel

@{
    ViewData["Title"] = "الأموال غير الكافية الواردة";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        direction: rtl;
        text-align: right;
    }
    .form-label {
        float: right;
    }
</style>

<div class="container mt-5">
    <h1 class="mb-4">الأموال غير الكافية الواردة</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            تفاصيل المعاملة
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="transactionId" class="form-label">معرف المعاملة:</label>
                        <input type="text" class="form-control" id="transactionId" value="@Model.TransactionId" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="accountNumber" class="form-label">رقم الحساب:</label>
                        <input type="text" class="form-control" id="accountNumber" value="@Model.AccountNumber" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="amount" class="form-label">المبلغ:</label>
                        <input type="text" class="form-control" id="amount" value="@Model.Amount.ToString("N2")" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="status" class="form-label">الحالة:</label>
                        <input type="text" class="form-control" id="status" value="@Model.Status" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="transactionDate" class="form-label">تاريخ المعاملة:</label>
                        <input type="text" class="form-control" id="transactionDate" value="@Model.TransactionDate.ToShortDateString()" readonly>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            تفاصيل إضافية
        </div>
        <div class="card-body">
            @if (Model.Details != null && Model.Details.Any())
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>البند</th>
                            <th>القيمة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.Details)
                        {
                            <tr>
                                <td>@detail.Item</td>
                                <td>@detail.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>لا توجد تفاصيل إضافية.</p>
            }
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-success me-2">قبول</button>
        <button type="button" class="btn btn-danger">رفض</button>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
