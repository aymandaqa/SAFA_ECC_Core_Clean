@using SAFA_ECC_Core_Clean.ViewModels
@model InwardDataChequeViewrViewModel

@{ 
    ViewData["Title"] = "عرض بيانات الشيكات الواردة";
}

<div class="container-fluid mt-4" dir="rtl">
    <h2 class="text-end mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white text-end">
            <h5 class="mb-0">فلترة البيانات</h5>
        </div>
        <div class="card-body">
            <form class="row g-3 justify-content-end">
                <div class="col-md-4">
                    <label for="chequeNumber" class="form-label text-end w-100">رقم الشيك:</label>
                    <input type="text" class="form-control text-end" id="chequeNumber" placeholder="أدخل رقم الشيك">
                </div>
                <div class="col-md-4">
                    <label for="bankName" class="form-label text-end w-100">اسم البنك:</label>
                    <select class="form-select text-end" id="bankName">
                        <option selected>اختر البنك...</option>
                        <option value="1">بنك 1</option>
                        <option value="2">بنك 2</option>
                    </select>
                </div>
                <div class="col-md-12 text-end">
                    <button type="submit" class="btn btn-primary">بحث</button>
                    <button type="reset" class="btn btn-secondary">مسح</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-end">
            <h5 class="mb-0">نتائج البحث</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-end">
                    <thead>
                        <tr>
                            <th>رقم الشيك</th>
                            <th>اسم البنك</th>
                            <th>المبلغ</th>
                            <th>تاريخ الاستحقاق</th>
                            <th>الحالة</th>
                            <th>إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Cheques != null && Model.Cheques.Any())
                        {
                            @foreach (var cheque in Model.Cheques)
                            {
                                <tr>
                                    <td>@cheque.ChequeNumber</td>
                                    <td>@cheque.BankName</td>
                                    <td>@cheque.Amount</td>
                                    <td>@cheque.DueDate.ToShortDateString()</td>
                                    <td>@cheque.Status</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">لا توجد بيانات لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
