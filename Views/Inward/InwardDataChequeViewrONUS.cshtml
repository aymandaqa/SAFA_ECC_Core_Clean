@model SAFA_ECC_Core_Clean.ViewModels.InwardDataChequeViewModel

@{ 
    ViewData["Title"] = "عرض بيانات الشيكات الواردة";
    Layout = "~/Views/Shared/_Layout.cshtml"; // افتراض وجود ملف تخطيط مشترك
}

<div class="container-fluid" dir="rtl" lang="ar">
    <h1 class="text-center my-4">@ViewData["Title"]</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">بحث عن الشيكات</h6>
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="ChequeNumber" class="form-label">رقم الشيك:</label>
                        <input type="text" class="form-control" id="ChequeNumber" name="ChequeNumber" />
                    </div>
                    <div class="col-md-4">
                        <label for="BankName" class="form-label">اسم البنك:</label>
                        <input type="text" class="form-control" id="BankName" name="BankName" />
                    </div>
                    <div class="col-md-4">
                        <label for="FromDate" class="form-label">من تاريخ:</label>
                        <input type="date" class="form-control" id="FromDate" name="FromDate" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="ToDate" class="form-label">إلى تاريخ:</label>
                        <input type="date" class="form-control" id="ToDate" name="ToDate" />
                    </div>
                    <div class="col-md-4">
                        <label for="Status" class="form-label">الحالة:</label>
                        <select class="form-select" id="Status" name="Status">
                            <option value="">الكل</option>
                            <option value="1">معلق</option>
                            <option value="2">تم الصرف</option>
                            <option value="3">مرفوض</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">بحث</button>
                    <button type="reset" class="btn btn-secondary">مسح</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">نتائج البحث</h6>
            <div>
                <a asp-action="Create" class="btn btn-success btn-sm">إضافة شيك جديد</a>
                <a asp-action="Export" class="btn btn-info btn-sm">تصدير</a>
            </div>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Cheques != null && Model.Cheques.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>رقم الشيك</th>
                                <th>اسم البنك</th>
                                <th>المبلغ</th>
                                <th>تاريخ الاستحقاق</th>
                                <th>الحالة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Cheques)
                            {
                                <tr>
                                    <td>@item.ChequeNumber</td>
                                    <td>@item.BankName</td>
                                    <td>@item.Amount.ToString("N2")</td>
                                    <td>@item.DueDate.ToShortDateString()</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center">لا توجد بيانات لعرضها.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- يمكن إضافة أي سكربتات خاصة بهذه الصفحة هنا -->
    <!-- مثال: تهيئة DataTable -->
    <script>
        $(document).ready(function() {
            $(\'#dataTable\').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Arabic.json"
                }
            });
        });
    </script>
}