@using SAFA_ECC_Core_Clean.ViewModels
@model InwardFinancialWFDetailsPMADISViewModel

@{ 
    ViewData["Title"] = "تفاصيل سير عمل المالي الوارد PMADIS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <!-- Placeholder for form/table/buttons -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">القسم الرئيسي</h5>
                </div>
                <div class="card-body">
                    <!-- Content will go here -->
                </div>
            </div>
        </div>
    </div>
</div>




<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">تفاصيل النموذج</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <label for="inputField1" class="col-sm-2 col-form-label">الحقل الأول:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputField1">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputField2" class="col-sm-2 col-form-label">الحقل الثاني:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputField2">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="dropdownField" class="col-sm-2 col-form-label">قائمة منسدلة:</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="dropdownField">
                                <option selected>اختر...</option>
                                <option value="1">خيار 1</option>
                                <option value="2">خيار 2</option>
                                <option value="3">خيار 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-2">حفظ</button>
                        <button type="button" class="btn btn-secondary">إلغاء</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">البيانات الجدولية</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">العمود الأول</th>
                                <th scope="col">العمود الثاني</th>
                                <th scope="col">العمود الثالث</th>
                                <th scope="col">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>بيانات 1-1</td>
                                <td>بيانات 1-2</td>
                                <td>بيانات 1-3</td>
                                <td>
                                    <button class="btn btn-sm btn-warning">تعديل</button>
                                    <button class="btn btn-sm btn-danger">حذف</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>بيانات 2-1</td>
                                <td>بيانات 2-2</td>
                                <td>بيانات 2-3</td>
                                <td>
                                    <button class="btn btn-sm btn-warning">تعديل</button>
                                    <button class="btn btn-sm btn-danger">حذف</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
