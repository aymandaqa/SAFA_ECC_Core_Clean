@model SAFA_ECC_Core_Clean.ViewModels.InwardFixedErrorDetailsViewModel

@{ 
    ViewData["Title"] = "تفاصيل أخطاء Inward الثابتة";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" integrity="sha384-PJsj/BTFKJ8ABnSoB7duuAVWbeVw+WJKalR0EQfEIoxL+OAP+TwuJSLbVStjK7DU" crossorigin="anonymous">

<div dir="rtl" lang="ar">
    <h1>@ViewData["Title"]</h1>

    <p>هنا سيتم عرض تفاصيل أخطاء Inward الثابتة.</p>


    <div class="card mt-4">
        <div class="card-header">
            <h4>معلومات الخطأ</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <label for="ErrorId" class="col-sm-2 col-form-label">معرف الخطأ:</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="ErrorId" value="@Model.ErrorId">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="ErrorMessage" class="col-sm-2 col-form-label">رسالة الخطأ:</label>
                    <div class="col-sm-10">
                        <textarea readonly class="form-control-plaintext" id="ErrorMessage">@Model.ErrorMessage</textarea>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="ErrorDate" class="col-sm-2 col-form-label">تاريخ الخطأ:</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="ErrorDate" value="@Model.ErrorDate.ToShortDateString()">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Status" class="col-sm-2 col-form-label">الحالة:</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="Status" value="@Model.Status">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h4>تفاصيل المعاملات المتأثرة</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>معرف المعاملة</th>
                        <th>المبلغ</th>
                        <th>العملة</th>
                        <th>تاريخ المعاملة</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.AffectedTransactions != null && Model.AffectedTransactions.Any())
                    {
                        foreach (var transaction in Model.AffectedTransactions)
                        {
                            <tr>
                                <td>@transaction.TransactionId</td>
                                <td>@transaction.Amount</td>
                                <td>@transaction.Currency</td>
                                <td>@transaction.TransactionDate.ToShortDateString()</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">لا توجد معاملات متأثرة.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-start">
        <button type="button" class="btn btn-primary">معالجة الخطأ</button>
        <button type="button" class="btn btn-secondary">إلغاء</button>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
}

