
@using SAFA_ECC_Core_Clean.ViewModels
@model InwardSearchViewModel

@{ 
    ViewData["Title"] = "بحث الوارد";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="container-fluid" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white text-end">
                    <h5 class="mb-0">معايير البحث</h5>
                </div>
                <div class="card-body">
                    <form asp-action="InwardSearch" method="get">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label asp-for="InwardNumber" class="form-label">رقم الوارد:</label>
                                <input asp-for="InwardNumber" class="form-control text-end" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Subject" class="form-label">الموضوع:</label>
                                <input asp-for="Subject" class="form-control text-end" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Sender" class="form-label">المرسل:</label>
                                <input asp-for="Sender" class="form-control text-end" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="DateFrom" class="form-label">تاريخ من:</label>
                                <input asp-for="DateFrom" type="date" class="form-control text-end" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="DateTo" class="form-label">تاريخ إلى:</label>
                                <input asp-for="DateTo" type="date" class="form-control text-end" />
                            </div>
                            <div class="col-md-4 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> بحث</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model != null && Model.SearchResults != null && Model.SearchResults.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white text-end">
                        <h5 class="mb-0">نتائج البحث</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered text-end">
                                <thead class="table-dark">
                                    <tr>
                                        <th>رقم الوارد</th>
                                        <th>الموضوع</th>
                                        <th>المرسل</th>
                                        <th>تاريخ الوارد</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.SearchResults)
                                    {
                                        <tr>
                                            <td>@item.InwardNumber</td>
                                            <td>@item.Subject</td>
                                            <td>@item.Sender</td>
                                            <td>@item.InwardDate.ToShortDateString()</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else if (Model != null && Model.SearchPerformed)
            {
                <div class="alert alert-info text-center" role="alert" dir="rtl">
                    لا توجد نتائج مطابقة لمعايير البحث.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
