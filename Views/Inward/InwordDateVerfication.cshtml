@using SAFA_ECC_Core_Clean.ViewModels
@model InwordDateVerificationViewModel

@{ 
    ViewData["Title"] = "التحقق من تاريخ الوارد";
}

<h1 class="text-center mb-4">التحقق من تاريخ الوارد</h1>

<div class="container-fluid" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-end">
                    <h5 class="mb-0">نموذج التحقق من التاريخ</h5>
                </div>
                <div class="card-body">
                    <form asp-action="InwordDateVerfication" method="post">
                        <div class="mb-3 row">
                            <label for="inwardDate" class="col-sm-3 col-form-label text-sm-end">تاريخ الوارد:</label>
                            <div class="col-sm-9">
                                <input type="date" class="form-control" id="inwardDate" name="InwardDate" value="@Model.InwardDate.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="InwardDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="documentNumber" class="col-sm-3 col-form-label text-sm-end">رقم المستند:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="documentNumber" name="DocumentNumber" value="@Model.DocumentNumber" />
                                <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">تحقق</button>
                            <button type="reset" class="btn btn-secondary">إعادة تعيين</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white text-end">
                    <h5 class="mb-0">نتائج التحقق</h5>
                </div>
                <div class="card-body">
                    @if (Model.VerificationResults != null && Model.VerificationResults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover text-end">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>رقم الوارد</th>
                                        <th>تاريخ الوارد</th>
                                        <th>الحالة</th>
                                        <th>ملاحظات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.VerificationResults)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.InwardNumber</td>
                                            <td>@item.InwardDate.ToShortDateString()</td>
                                            <td>@item.Status</td>
                                            <td>@item.Notes</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center">لا توجد نتائج للتحقق حتى الآن.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

