@using SAFA_ECC_Core_Clean.ViewModels
@model SAFA_ECC_Core_Clean.ViewModels.InwardViewModels.PMA_DATAVerficationDetailsViewModel

@{ 
    ViewData["Title"] = "تفاصيل التحقق من بيانات PMADATA الواردة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4" dir="rtl">
    <h2 class="text-right mb-4">@ViewData["Title"]</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-right">معلومات التحقق</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="field1" class="form-label float-end">الحقل الأول:</label>
                        <input type="text" class="form-control text-right" id="field1" value="@Model.Field1" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="field2" class="form-label float-end">الحقل الثاني:</label>
                        <input type="text" class="form-control text-right" id="field2" value="@Model.Field2" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="notes" class="form-label float-end">ملاحظات:</label>
                        <textarea class="form-control text-right" id="notes" rows="3">@Model.Notes</textarea>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">حفظ</button>
                    <button type="button" class="btn btn-secondary">إلغاء</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4 mt-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-right">تفاصيل البيانات</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-right" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>العمود 1</th>
                            <th>العمود 2</th>
                            <th>العمود 3</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Details != null && Model.Details.Any())
                        {
                            foreach (var item in Model.Details)
                            {
                                <tr>
                                    <td>@item.DetailField1</td>
                                    <td>@item.DetailField2</td>
                                    <td>@item.DetailField3</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">لا توجد تفاصيل لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
        $(document).ready(function () {
            // تهيئة أي مكونات Bootstrap أو جداول بيانات هنا
        });
    </script>
}
