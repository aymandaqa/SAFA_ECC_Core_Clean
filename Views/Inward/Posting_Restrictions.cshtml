
@using SAFA_ECC_Core_Clean.ViewModels
@model PostingRestrictionsViewModel

@{
    ViewData["Title"] = "قيود الترحيل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-right mb-4">@ViewData["Title"]</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 text-right">
            <h6 class="m-0 font-weight-bold text-primary">إدارة قيود الترحيل</h6>
        </div>
        <div class="card-body">
            <form asp-action="SavePostingRestriction" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group text-right">
                            <label asp-for="RestrictionId" class="control-label"></label>
                            <input asp-for="RestrictionId" class="form-control text-right" />
                            <span asp-validation-for="RestrictionId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group text-right">
                            <label asp-for="RestrictionName" class="control-label"></label>
                            <input asp-for="RestrictionName" class="form-control text-right" />
                            <span asp-validation-for="RestrictionName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group text-right">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control text-right" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group text-right">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control text-right" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group text-right">
                    <label asp-for="IsActive" class="control-label"></label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="IsActive" asp-for="IsActive">
                        <label class="form-check-label" for="IsActive">نشط</label>
                    </div>
                </div>
                <div class="form-group text-right mt-4">
                    <button type="submit" class="btn btn-primary">حفظ</button>
                    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4 mt-5">
        <div class="card-header py-3 text-right">
            <h6 class="m-0 font-weight-bold text-primary">قائمة قيود الترحيل</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-right" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.RestrictionId)</th>
                            <th>@Html.DisplayNameFor(model => model.RestrictionName)</th>
                            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* هنا سيتم عرض البيانات من ViewModel *@
                        @if (Model != null && Model.PostingRestrictions != null)
                        {
                            @foreach (var item in Model.PostingRestrictions)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.RestrictionId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.RestrictionName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.RestrictionId" class="btn btn-info btn-sm">تعديل</a>
                                        <a asp-action="Details" asp-route-id="@item.RestrictionId" class="btn btn-primary btn-sm">تفاصيل</a>
                                        <a asp-action="Delete" asp-route-id="@item.RestrictionId" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">لا توجد قيود ترحيل لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
