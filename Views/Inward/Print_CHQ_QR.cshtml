@model SAFA_ECC_Core_Clean.ViewModels.PrintChqQrViewModel

@{    ViewData["Title"] = "طباعة شيك QR";
    Layout = "_Layout"; // Assuming a shared layout file
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" integrity="sha384-PJsj/BGSVhaadJLOfCQwt5rT/TXXEdOq7eKgez6sBigBWxko5GPG7APCBcOJGmVs" crossorigin="anonymous">
    <style>
        body {
            direction: rtl;
            text-align: right;
        }
        .form-label {
            text-align: right;
            width: 100%;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
}

<div class="container-fluid">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">معلومات الشيك</div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label asp-for="ChequeNumber" class="form-label">رقم الشيك</label>
                            <input asp-for="ChequeNumber" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="AccountNumber" class="form-label">رقم الحساب</label>
                            <input asp-for="AccountNumber" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">المبلغ</label>
                            <input asp-for="Amount" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="BeneficiaryName" class="form-label">اسم المستفيد</label>
                            <input asp-for="BeneficiaryName" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="IssueDate" class="form-label">تاريخ الإصدار</label>
                            <input asp-for="IssueDate" class="form-control" type="date" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="BankName" class="form-label">اسم البنك</label>
                            <input asp-for="BankName" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">طباعة</button>
                        <button type="button" class="btn btn-secondary">إلغاء</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">معاينة QR</div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model?.QRData))
                    {
                        <img src="data:image/png;base64,@Model.QRData" alt="QR Code" class="img-fluid" />
                    }
                    else
                    {
                        <p>لا توجد بيانات QR للمعاينة.</p>
                    }
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">سجل الطباعة</div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>رقم الشيك</th>
                                <th>المبلغ</th>
                                <th>تاريخ الطباعة</th>
                                <th>الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>123456</td>
                                <td>1000.00</td>
                                <td>2023-01-15</td>
                                <td>تمت الطباعة</td>
                            </tr>
                            <tr>
                                <td>654321</td>
                                <td>500.50</td>
                                <td>2023-01-14</td>
                                <td>فشل</td>
                            </tr>
                            <!-- More rows can be added dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
