
@using SAFA_ECC_Core_Clean.ViewModels
@model SAFA_ECC_Core_Clean.ViewModels.InwardViewModels.RejectChequeViewModel

@{ 
    ViewData["Title"] = "رفض الشيك";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        direction: rtl;
        text-align: right;
    }

    .form-label {
        float: right;
    }

    .btn {
        margin-left: 5px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="RejectCheque" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ChequeNumber" class="form-label"></label>
                                <input asp-for="ChequeNumber" class="form-control" />
                                <span asp-validation-for="ChequeNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AccountName" class="form-label">اسم الحساب:</label>
                                <input asp-for="AccountName" class="form-control" />
                                <span asp-validation-for="AccountName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Amount" class="form-label"></label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RejectReason" class="form-label"></label>
                                <textarea asp-for="RejectReason" class="form-control"></textarea>
                                <span asp-validation-for="RejectReason" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-danger">رفض الشيك</button>
                                <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                            </div>
                        </div>
                    </form>

                    <hr />

                    <h4>سجل الشيكات المرفوضة</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>رقم الشيك</th>
                                    <th>اسم الحساب</th>
                                    <th>المبلغ</th>
                                    <th>سبب الرفض</th>
                                    <th>تاريخ الرفض</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- يتم تعبئة البيانات هنا من ViewModel أو AJAX -->
                                <tr>
                                    <td>12345</td>
                                    <td>محمد أحمد</td>
                                    <td>1500.00</td>
                                    <td>توقيع غير مطابق</td>
                                    <td>2025-09-16</td>
                                </tr>
                                <tr>
                                    <td>67890</td>
                                    <td>فاطمة علي</td>
                                    <td>2500.00</td>
                                    <td>رصيد غير كافٍ</td>
                                    <td>2025-09-15</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


