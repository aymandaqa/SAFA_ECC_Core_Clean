@using SAFA_ECC_Core_Clean.ViewModels
@model SAFA_ECC_Core_Clean.ViewModels.InwardViewModels.ReturnOnUsStoppedChequeDetailsViewModel

@{ 
    ViewData["Title"] = "تفاصيل الشيكات الموقوفة";
}

<div class="container-fluid mt-4" dir="rtl">
    <h2 class="text-center mb-4">تفاصيل الشيكات الموقوفة</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">معلومات الشيك</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="chequeNumber" class="form-label">رقم الشيك:</label>
                        <input type="text" class="form-control" id="chequeNumber" value="@Model.ChequeNumber" readonly>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="accountNumber" class="form-label">رقم الحساب:</label>
                        <input type="text" class="form-control" id="accountNumber" value="@Model.AccountNumber" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="bankName" class="form-label">اسم البنك:</label>
                        <input type="text" class="form-control" id="bankName" value="@Model.BankName" readonly>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="amount" class="form-label">المبلغ:</label>
                        <input type="text" class="form-control" id="amount" value="@Model.Amount.ToString("N2")" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="stopReason" class="form-label">سبب الإيقاف:</label>
                        <input type="text" class="form-control" id="stopReason" value="@Model.StopReason" readonly>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="stopDate" class="form-label">تاريخ الإيقاف:</label>
                        <input type="text" class="form-control" id="stopDate" value="@Model.StopDate.ToShortDateString()" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">معلومات العميل</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="customerName" class="form-label">اسم العميل:</label>
                        <input type="text" class="form-control" id="customerName" value="@Model.CustomerName" readonly>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="customerId" class="form-label">رقم هوية العميل:</label>
                        <input type="text" class="form-control" id="customerId" value="@Model.CustomerId" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <a href="#" class="btn btn-secondary me-2">رجوع</a>
        <button type="button" class="btn btn-primary">طباعة</button>
    </div>
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
        // على سبيل المثال، لتأكيد الطباعة أو معالجة الرجوع
        document.querySelector(".btn-primary").addEventListener("click", function() {
            window.print();
        });

        document.querySelector(".btn-secondary").addEventListener("click", function(e) {
            e.preventDefault();
            window.history.back();
        });
    </script>
}
