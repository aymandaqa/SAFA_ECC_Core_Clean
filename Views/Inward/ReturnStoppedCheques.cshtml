@model SAFA_ECC_Core_Clean.ViewModels.InwardViewModels.ReturnStoppedChequesViewModel
@{
    ViewData["Title"] = "الشيكات الموقوفة المرتجعة/الواردة";
}

<h1>@ViewData["Title"]</h1>

<div class="container-fluid text-right" dir="rtl">
    <h2 class="mt-4 mb-4">الشيكات الموقوفة المرتجعة/الواردة</h2>

    <!-- نموذج البحث -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">بحث عن شيكات</h5>
        </div>
        <div class="card-body">
            <form>
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="chequeNumber" class="form-label">رقم الشيك</label>
                        <input type="text" class="form-control" id="chequeNumber" placeholder="أدخل رقم الشيك">
                    </div>
                    <div class="col-md-4">
                        <label for="accountNumber" class="form-label">رقم الحساب</label>
                        <input type="text" class="form-control" id="accountNumber" placeholder="أدخل رقم الحساب">
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">بحث</button>
                        <button type="reset" class="btn btn-secondary me-2">مسح</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول نتائج البحث -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">نتائج البحث</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover text-right">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">رقم الشيك</th>
                            <th scope="col">رقم الحساب</th>
                            <th scope="col">اسم العميل</th>
                            <th scope="col">المبلغ</th>
                            <th scope="col">تاريخ الإرجاع</th>
                            <th scope="col">الحالة</th>
                            <th scope="col">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Cheques != null)
                        {
                            @foreach (var cheque in Model.Cheques)
                            {
                                <tr>
                                    <td>@cheque.Id</td>
                                    <td>@cheque.ChequeNumber</td>
                                    <td>@cheque.AccountNumber</td>
                                    <td>@cheque.CustomerName</td>
                                    <td>@cheque.Amount.ToString("N2")</td>
                                    <td>@cheque.ReturnDate.ToShortDateString()</td>
                                    <td>@cheque.Status</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-danger btn-sm">إيقاف</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">لا توجد بيانات لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- أزرار الإجراءات العامة -->
    <div class="d-flex justify-content-end mt-4">
        <button class="btn btn-success me-2">تصدير إلى Excel</button>
        <button class="btn btn-primary">إضافة شيك جديد</button>
    </div>
</div>
