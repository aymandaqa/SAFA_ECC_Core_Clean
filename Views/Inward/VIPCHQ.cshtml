<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VIPCHQ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            <h1>VIPCHQ - الوارد</h1>

            <div class="card mt-4">
                <div class="card-header">
                    <h4>بيانات البحث</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="inputField1" class="form-label">الحقل الأول</label>
                                <input type="text" class="form-control" id="inputField1">
                            </div>
                            <div class="col-md-4">
                                <label for="inputField2" class="form-label">الحقل الثاني</label>
                                <input type="text" class="form-control" id="inputField2">
                            </div>
                            <div class="col-md-4">
                                <label for="inputField3" class="form-label">الحقل الثالث</label>
                                <input type="text" class="form-control" id="inputField3">
                            </div>
                        </div>
                        <div class="mt-3 text-start">
                            <button type="submit" class="btn btn-primary">بحث</button>
                            <button type="reset" class="btn btn-secondary">مسح</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h4>نتائج البحث</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>العمود الأول</th>
                                    <th>العمود الثاني</th>
                                    <th>العمود الثالث</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>بيانات 1</td>
                                    <td>بيانات 2</td>
                                    <td>بيانات 3</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>بيانات 4</td>
                                    <td>بيانات 5</td>
                                    <td>بيانات 6</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>