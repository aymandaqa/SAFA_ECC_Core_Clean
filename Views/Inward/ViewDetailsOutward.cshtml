@model SAFA_ECC_Core_Clean.ViewModels.OutwardViewModels.OutwardViewModel

@{ ViewData["Title"] = "تفاصيل الصادر"; }

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
<style>
    body { direction: rtl; text-align: right; }
    .form-label { float: right; }
    .form-control { text-align: right; }
</style>

<div class="container-fluid">
    <h1 class="mb-4">تفاصيل الصادر</h1>

    <div class="row">
        <div class="col-md-12">

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">معلومات الصادر</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Subject)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Sender)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Sender)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Recipient)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Recipient)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.OutwardDate)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OutwardDate)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">المرفقات</h5>
                </div>
                <div class="card-body">
                    @if (Model.Attachments != null && Model.Attachments.Any())
                    {
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Attachments.FirstOrDefault().FileName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Attachments.FirstOrDefault().FileType)</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var attachment in Model.Attachments)
                                {
                                    <tr>
                                        <td>@attachment.FileName</td>
                                        <td>@attachment.FileType</td>
                                        <td>
                                            <a href="@attachment.FilePath" class="btn btn-info btn-sm" target="_blank">عرض</a>
                                            <a href="@attachment.FilePath" class="btn btn-success btn-sm" download>تحميل</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>لا توجد مرفقات.</p>
                    }
                </div>
            </div>

            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>
                <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
