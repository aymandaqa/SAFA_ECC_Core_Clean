@model SAFA_ECC_Core_Clean.ViewModels.LoginViewModels.LoginChangePasswordViewModel

@{ 
    ViewData["Title"] = "تسجيل الدخول / تغيير كلمة المرور";
    Layout = "_Layout"; // افتراضًا أن لديك ملف تخطيط _Layout.cshtml
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h3 class="mb-0">تسجيل الدخول / تغيير كلمة المرور</h3>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">تسجيل الدخول</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="change-password-tab" data-bs-toggle="tab" data-bs-target="#change-password" type="button" role="tab" aria-controls="change-password" aria-selected="false">تغيير كلمة المرور</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                            <h5 class="card-title text-center mt-3">تسجيل الدخول</h5>
                            <form asp-action="Login" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger text-end"></div>
                                <div class="mb-3 text-end">
                                    <label asp-for="Login.Email" class="form-label">البريد الإلكتروني:</label>
                                    <input asp-for="Login.Email" class="form-control text-end" dir="ltr" />
                                    <span asp-validation-for="Login.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3 text-end">
                                    <label asp-for="Login.Password" class="form-label">كلمة المرور:</label>
                                    <input asp-for="Login.Password" type="password" class="form-control text-end" dir="ltr" />
                                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3 form-check text-end">
                                    <input asp-for="Login.RememberMe" type="checkbox" class="form-check-input" id="rememberMeCheck" />
                                    <label class="form-check-label" for="rememberMeCheck">تذكرني</label>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">تسجيل الدخول</button>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="change-password" role="tabpanel" aria-labelledby="change-password-tab">
                            <h5 class="card-title text-center mt-3">تغيير كلمة المرور</h5>
                            <form asp-action="ChangePassword" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger text-end"></div>
                                <div class="mb-3 text-end">
                                    <label asp-for="ChangePassword.CurrentPassword" class="form-label">كلمة المرور الحالية:</label>
                                    <input asp-for="ChangePassword.CurrentPassword" type="password" class="form-control text-end" dir="ltr" />
                                    <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3 text-end">
                                    <label asp-for="ChangePassword.NewPassword" class="form-label">كلمة المرور الجديدة:</label>
                                    <input asp-for="ChangePassword.NewPassword" type="password" class="form-control text-end" dir="ltr" />
                                    <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3 text-end">
                                    <label asp-for="ChangePassword.ConfirmNewPassword" class="form-label">تأكيد كلمة المرور الجديدة:</label>
                                    <input asp-for="ChangePassword.ConfirmNewPassword" type="password" class="form-control text-end" dir="ltr" />
                                    <span asp-validation-for="ChangePassword.ConfirmNewPassword" class="text-danger"></span>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">تغيير كلمة المرور</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        direction: rtl;
        text-align: right;
    }
    .form-check-label {
        margin-right: 1.5rem; /* Adjust as needed for RTL checkbox */
        margin-left: 0;
    }
    .form-check-input {
        float: right;
        margin-left: .5em;
        margin-right: -.5em;
    }
    .nav-tabs .nav-link {
        border-top-left-radius: 0;
        border-top-right-radius: .25rem;
    }
    .nav-tabs .nav-item:last-child .nav-link {
        border-top-right-radius: 0;
        border-top-left-radius: .25rem;
    }
</style>
