
@model SAFA_ECC_Core_Clean.ViewModels.OutwardViewModels.OutwardChqViewModel

@{ 
    ViewData["Title"] = "شيكات صادرة/واردة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        direction: rtl;
        text-align: right;
    }
    .form-label {
        float: right;
    }
    .btn {
        margin-left: 5px;
    }
</style>

<div class="container-fluid mt-4">
    <h2 class="mb-4">إدارة الشيكات الصادرة والواردة</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">بحث وتصفية الشيكات</h5>
        </div>
        <div class="card-body">
            <form asp-action="FilterOutwardChq" method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="ChequeNumber" class="form-label">رقم الشيك</label>
                        <input asp-for="ChequeNumber" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="BeneficiaryName" class="form-label">اسم المستفيد</label>
                        <input asp-for="BeneficiaryName" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Status" class="form-label">الحالة</label>
                        <select asp-for="Status" class="form-select">
                            <option value="">الكل</option>
                            <option value="Pending">معلق</option>
                            <option value="Approved">موافق عليه</option>
                            <option value="Rejected">مرفوض</option>
                        </select>
                    </div>
                    <div class="col-12 text-start">
                        <button type="submit" class="btn btn-primary">بحث</button>
                        <button type="reset" class="btn btn-secondary">مسح</n                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">إضافة شيك جديد</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddOutwardChq" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="ChequeNumber" class="form-label">رقم الشيك</label>
                        <input asp-for="ChequeNumber" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Amount" class="form-label">المبلغ</label>
                        <input asp-for="Amount" type="number" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BeneficiaryName" class="form-label">اسم المستفيد</label>
                        <input asp-for="BeneficiaryName" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IssueDate" class="form-label">تاريخ الإصدار</label>
                        <input asp-for="IssueDate" type="date" class="form-control" required />
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">الوصف</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="col-12 text-start">
                        <button type="submit" class="btn btn-success">إضافة شيك</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">قائمة الشيكات</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Cheques != null && Model.Cheques.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered text-right">
                        <thead>
                            <tr>
                                <th>رقم الشيك</th>
                                <th>المبلغ</th>
                                <th>المستفيد</th>
                                <th>تاريخ الإصدار</th>
                                <th>الحالة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cheque in Model.Cheques)
                            {
                                <tr>
                                    <td>@cheque.ChequeNumber</td>
                                    <td>@cheque.Amount.ToString("N2")</td>
                                    <td>@cheque.BeneficiaryName</td>
                                    <td>@cheque.IssueDate.ToShortDateString()</td>
                                    <td>@cheque.Status</td>
                                    <td>
                                        <a asp-action="EditOutwardChq" asp-route-id="@cheque.Id" class="btn btn-sm btn-warning">تعديل</a>
                                        <a asp-action="DetailsOutwardChq" asp-route-id="@cheque.Id" class="btn btn-sm btn-info">تفاصيل</a>
                                        <a asp-action="DeleteOutwardChq" asp-route-id="@cheque.Id" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="alert alert-info">لا توجد شيكات لعرضها.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


