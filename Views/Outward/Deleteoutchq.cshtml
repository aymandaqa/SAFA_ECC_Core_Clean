@model SAFA_ECC_Core_Clean.ViewModels.DeleteOutwardChequeViewModel

@{ 
    ViewData["Title"] = "حذف شيك صادر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-end">
                    <h3 class="mb-0">تأكيد الحذف</h3>
                </div>
                <div class="card-body text-end">
                    <p class="lead">هل أنت متأكد أنك تريد حذف هذا الشيك الصادر؟</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ChequeNumber)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ChequeNumber)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BeneficiaryName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BeneficiaryName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.IssueDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IssueDate)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BankName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BankName)
                        </dd>
                    </dl>

                    <form asp-action="DeleteOutwardCheque" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> حذف
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle-fill"></i> إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
