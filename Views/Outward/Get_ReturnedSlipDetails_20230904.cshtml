@using SAFA_ECC_Core_Clean.ViewModels
@model GetReturnedSlipDetailsViewModel

@{ 
    ViewData["Title"] = "تفاصيل إيصال الإرجاع";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4" dir="rtl">
    <h1 class="text-end mb-4">@ViewData["Title"]</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 text-end">
            <h6 class="m-0 font-weight-bold text-primary">معلومات إيصال الإرجاع</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="slipNumber" class="form-label float-end">رقم الإيصال:</label>
                        <input type="text" class="form-control text-end" id="slipNumber" value="@Model.SlipNumber" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="returnDate" class="form-label float-end">تاريخ الإرجاع:</label>
                        <input type="date" class="form-control text-end" id="returnDate" value="@Model.ReturnDate.ToString("yyyy-MM-dd")" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="customerName" class="form-label float-end">اسم العميل:</label>
                        <input type="text" class="form-control text-end" id="customerName" value="@Model.CustomerName" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="totalAmount" class="form-label float-end">المبلغ الإجمالي:</label>
                        <input type="text" class="form-control text-end" id="totalAmount" value="@Model.TotalAmount.ToString("N2")" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="notes" class="form-label float-end">ملاحظات:</label>
                        <textarea class="form-control text-end" id="notes" rows="3" readonly>@Model.Notes</textarea>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4 mt-4">
        <div class="card-header py-3 text-end">
            <h6 class="m-0 font-weight-bold text-primary">تفاصيل الأصناف المرجعة</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-end" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>الصنف</th>
                            <th>الكمية المرجعة</th>
                            <th>سعر الوحدة</th>
                            <th>الإجمالي</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ItemName</td>
                                    <td>@item.ReturnedQuantity</td>
                                    <td>@item.UnitPrice.ToString("N2")</td>
                                    <td>@item.TotalItemAmount.ToString("N2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">لا توجد أصناف مرجعة لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-start mt-4">
        <a href="#" class="btn btn-secondary">العودة</a>
        <button type="button" class="btn btn-primary">طباعة</button>
    </div>
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
    </script>
}
