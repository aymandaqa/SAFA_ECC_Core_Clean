@model SAFA_ECC_Core_Clean.ViewModels.OutwardIndexViewModel

@{
    ViewData["Title"] = "الشيكات الصادرة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-arrow-up me-2"></i>
                            الشيكات الصادرة
                        </h4>
                        <div>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>
                                إضافة شيك صادر
                            </a>
                            <a asp-action="Statistics" class="btn btn-info">
                                <i class="fas fa-chart-bar me-1"></i>
                                الإحصائيات
                            </a>
                            <button type="button" class="btn btn-primary" onclick="toggleBatchMode()">
                                <i class="fas fa-tasks me-1"></i>
                                المعالجة المجمعة
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Search Form -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="SearchModel.ChqSequance" class="form-label"></label>
                                <input asp-for="SearchModel.ChqSequance" class="form-control" placeholder="رقم التسلسل" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.DrwChqNo" class="form-label"></label>
                                <input asp-for="SearchModel.DrwChqNo" class="form-control" placeholder="رقم الشيك" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.DrwAcctNo" class="form-label"></label>
                                <input asp-for="SearchModel.DrwAcctNo" class="form-control" placeholder="رقم الحساب" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.BenName" class="form-label"></label>
                                <input asp-for="SearchModel.BenName" class="form-control" placeholder="اسم المستفيد" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.FromDate" class="form-label"></label>
                                <input asp-for="SearchModel.FromDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.ToDate" class="form-label"></label>
                                <input asp-for="SearchModel.ToDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.MinAmount" class="form-label"></label>
                                <input asp-for="SearchModel.MinAmount" class="form-control" placeholder="أقل مبلغ" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.MaxAmount" class="form-label"></label>
                                <input asp-for="SearchModel.MaxAmount" class="form-control" placeholder="أكبر مبلغ" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.Status" class="form-label"></label>
                                <select asp-for="SearchModel.Status" class="form-select">
                                    <option value="">جميع الحالات</option>
                                    <option value="NEW">جديد</option>
                                    <option value="PENDING">في الانتظار</option>
                                    <option value="AUTHORIZED">معتمد</option>
                                    <option value="POSTED">مرحل</option>
                                    <option value="RETURNED">مرجع</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-1"></i>
                                        بحث
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Batch Actions (Hidden by default) -->
                    <div id="batchActions" class="alert alert-info d-none mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>المعالجة المجمعة:</strong>
                                <span id="selectedCount">0</span> شيك محدد
                            </div>
                            <div>
                                <button type="button" class="btn btn-success btn-sm" onclick="batchAuthorize()">
                                    <i class="fas fa-check me-1"></i>
                                    اعتماد المحدد
                                </button>
                                <button type="button" class="btn btn-danger btn-sm" onclick="batchReturn()">
                                    <i class="fas fa-times me-1"></i>
                                    إرجاع المحدد
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm" onclick="toggleBatchMode()">
                                    إلغاء
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Results Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th class="batch-column d-none">
                                        <input type="checkbox" id="selectAll" onchange="toggleSelectAll()" />
                                    </th>
                                    <th>التسلسل</th>
                                    <th>رقم الشيك</th>
                                    <th>رقم الحساب</th>
                                    <th>المبلغ</th>
                                    <th>اسم المستفيد</th>
                                    <th>تاريخ المعاملة</th>
                                    <th>الحالة</th>
                                    <th>مرجع</th>
                                    <th>العمليات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Transactions.Any())
                                {
                                    @foreach (var item in Model.Transactions)
                                    {
                                        <tr>
                                            <td class="batch-column d-none">
                                                <input type="checkbox" class="row-checkbox" value="@item.Serial" onchange="updateSelectedCount()" />
                                            </td>
                                            <td>@item.Serial</td>
                                            <td>@item.DrwChqNo</td>
                                            <td>@item.DrwAcctNo</td>
                                            <td class="text-end">
                                                <span class="fw-bold text-success">
                                                    @(item.Amount?.ToString("N2")) @item.Currency
                                                </span>
                                            </td>
                                            <td>@item.BenName</td>
                                            <td>@item.TransDate?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case "NEW":
                                                        <span class="badge bg-info">جديد</span>
                                                        break;
                                                    case "PENDING":
                                                        <span class="badge bg-warning">في الانتظار</span>
                                                        break;
                                                    case "AUTHORIZED":
                                                        <span class="badge bg-success">معتمد</span>
                                                        break;
                                                    case "POSTED":
                                                        <span class="badge bg-primary">مرحل</span>
                                                        break;
                                                    case "RETURNED":
                                                        <span class="badge bg-danger">مرجع</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@item.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @if (item.Returned == true)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times me-1"></i>
                                                        مرجع
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>
                                                        عادي
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Serial" 
                                                       class="btn btn-sm btn-outline-primary" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Serial" 
                                                       class="btn btn-sm btn-outline-warning" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                                <p>لا توجد شيكات صادرة</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Transactions.Count == 100)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            تم عرض أول 100 نتيجة فقط. يرجى استخدام البحث لتضييق النتائج.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Batch Authorize Form -->
<form id="batchAuthorizeForm" asp-action="BatchAuthorize" method="post" style="display: none;">
    <input type="hidden" id="batchAuthorizeIds" name="selectedIds" />
</form>

@section Scripts {
    <script>
        let batchMode = false;

        function toggleBatchMode() {
            batchMode = !batchMode;
            const batchColumns = document.querySelectorAll('.batch-column');
            const batchActions = document.getElementById('batchActions');
            
            if (batchMode) {
                batchColumns.forEach(col => col.classList.remove('d-none'));
                batchActions.classList.remove('d-none');
            } else {
                batchColumns.forEach(col => col.classList.add('d-none'));
                batchActions.classList.add('d-none');
                document.getElementById('selectAll').checked = false;
                document.querySelectorAll('.row-checkbox').forEach(cb => cb.checked = false);
                updateSelectedCount();
            }
        }

        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.row-checkbox');
            
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
            updateSelectedCount();
        }

        function updateSelectedCount() {
            const selectedCheckboxes = document.querySelectorAll('.row-checkbox:checked');
            document.getElementById('selectedCount').textContent = selectedCheckboxes.length;
        }

        function batchAuthorize() {
            const selectedCheckboxes = document.querySelectorAll('.row-checkbox:checked');
            if (selectedCheckboxes.length === 0) {
                alert('يرجى تحديد شيك واحد على الأقل');
                return;
            }

            if (confirm(`هل أنت متأكد من اعتماد ${selectedCheckboxes.length} شيك؟`)) {
                const ids = Array.from(selectedCheckboxes).map(cb => cb.value);
                document.getElementById('batchAuthorizeIds').value = ids.join(',');
                document.getElementById('batchAuthorizeForm').submit();
            }
        }

        function batchReturn() {
            const selectedCheckboxes = document.querySelectorAll('.row-checkbox:checked');
            if (selectedCheckboxes.length === 0) {
                alert('يرجى تحديد شيك واحد على الأقل');
                return;
            }

            alert('ميزة الإرجاع المجمع ستكون متاحة قريباً');
        }

        // Auto-submit form on status change
        document.querySelector('select[name="SearchModel.Status"]').addEventListener('change', function() {
            this.form.submit();
        });

        // Format currency inputs
        document.querySelectorAll('input[name*="Amount"]').forEach(function(input) {
            input.addEventListener('input', function() {
                let value = this.value.replace(/[^\d.]/g, '');
                if (value) {
                    this.value = parseFloat(value).toLocaleString('en-US', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    });
                }
            });
        });
    </script>
}

