@{
    ViewData["Title"] = "طلبات الصادر المعلقة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SAFA_ECC_Core_Clean.ViewModels.PenddingOutWordRequestViewModel

<div class="container-fluid mt-4" dir="rtl">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">بحث وتصفية طلبات الصادر</h6>
        </div>
        <div class="card-body">
            <form class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label for="requestNumber" class="form-label">رقم الطلب</label>
                    <input type="text" class="form-control" id="requestNumber" placeholder="أدخل رقم الطلب">
                </div>
                <div class="col-md-4">
                    <label for="requestType" class="form-label">نوع الطلب</label>
                    <select id="requestType" class="form-select">
                        <option selected>اختر...</option>
                        <option>...</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">بحث</button>
                    <button type="reset" class="btn btn-secondary">مسح</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">قائمة طلبات الصادر المعلقة</h6>
            <a href="#" class="btn btn-success btn-sm">+ إضافة طلب جديد</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>رقم الطلب</th>
                            <th>تاريخ الطلب</th>
                            <th>نوع الطلب</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.PenddingRequests != null)
                        {
                            foreach (var request in Model.PenddingRequests)
                            {
                                <tr>
                                    <td>@request.RequestId</td>
                                    <td>@request.RequestDate.ToShortDateString()</td>
                                    <td>@request.RequestType</td>
                                    <td>@request.Status</td>
                                    <td>
                                        <a href="#" class="btn btn-info btn-sm">عرض</a>
                                        <a href="#" class="btn btn-success btn-sm">موافقة</a>
                                        <a href="#" class="btn btn-danger btn-sm">رفض</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">لا توجد طلبات صادر معلقة لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
