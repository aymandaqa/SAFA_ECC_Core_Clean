
@page
@model SAFA_ECC_Core_Clean.ViewModels.OutwardViewModels.RepresentReturnDisViewModel

@{ 
    ViewData["Title"] = "تمثيل إرجاع المرفوضات";
    Layout = "~/Views/Shared/_Layout.cshtml"; // افتراض وجود ملف تخطيط مشترك
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-right mb-4">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white text-right">
            <h5 class="mb-0">بحث وتصفية</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchField1" class="form-label">حقل البحث 1:</label>
                    <input type="text" class="form-control" id="searchField1" asp-for="SearchCriteria.Field1">
                </div>
                <div class="col-md-4">
                    <label for="searchField2" class="form-label">حقل البحث 2:</label>
                    <input type="text" class="form-control" id="searchField2" asp-for="SearchCriteria.Field2">
                </div>
                <div class="col-md-12 text-end mt-3">
                    <button type="submit" class="btn btn-primary">بحث</button>
                    <button type="reset" class="btn btn-secondary">مسح</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white text-right">
            <h5 class="mb-0">نتائج البحث</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-right">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>العمود 1</th>
                            <th>العمود 2</th>
                            <th>العمود 3</th>
                            <th>إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Results != null && Model.Results.Any())
                        {
                            @foreach (var item in Model.Results)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Column1</td>
                                    <td>@item.Column2</td>
                                    <td>@item.Column3</td>
                                    <td>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">لا توجد بيانات لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-end">
        <a asp-page="./Create" class="btn btn-success">إضافة جديد</a>
    </div>

</div>
