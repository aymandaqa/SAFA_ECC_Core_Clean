@model SAFA_ECC_Core_Clean.ViewModels.OutwardReturnedOutwardSlipsViewModel

@{
    ViewData["Title"] = "سندات الصرف الصادرة والمرتجعة";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">البحث والتصفية</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="startDate" class="form-label">تاريخ البدء:</label>
                        <input type="date" class="form-control" id="startDate" />
                    </div>
                    <div class="col-md-4">
                        <label for="endDate" class="form-label">تاريخ الانتهاء:</label>
                        <input type="date" class="form-control" id="endDate" />
                    </div>
                    <div class="col-md-4">
                        <label for="slipNumber" class="form-label">رقم السند:</label>
                        <input type="text" class="form-control" id="slipNumber" placeholder="أدخل رقم السند" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="customerName" class="form-label">اسم العميل:</label>
                        <input type="text" class="form-control" id="customerName" placeholder="أدخل اسم العميل" />
                    </div>
                    <div class="col-md-4">
                        <label for="slipType" class="form-label">نوع السند:</label>
                        <select class="form-select" id="slipType">
                            <option selected>اختر نوع السند...</option>
                            <option value="outward">صادر</option>
                            <option value="returned">مرتجع</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">بحث</button>
                    <button type="reset" class="btn btn-secondary">مسح</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">قائمة سندات الصرف</h6>
            <a asp-action="Create" class="btn btn-success">إنشاء سند جديد</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.OutwardSlips.FirstOrDefault().SlipNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.OutwardSlips.FirstOrDefault().SlipDate)</th>
                            <th>@Html.DisplayNameFor(model => model.OutwardSlips.FirstOrDefault().CustomerName)</th>
                            <th>@Html.DisplayNameFor(model => model.OutwardSlips.FirstOrDefault().TotalAmount)</th>
                            <th>@Html.DisplayNameFor(model => model.OutwardSlips.FirstOrDefault().SlipType)</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OutwardSlips != null && Model.OutwardSlips.Any())
                        {
                            @foreach (var item in Model.OutwardSlips)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.SlipNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SlipDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SlipType)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">لا توجد بيانات لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
