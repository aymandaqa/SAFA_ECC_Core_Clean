@model SAFA_ECC_Core_Clean.ViewModels.OutwardViewModels.TimeOutRequestViewModel

@{ 
    ViewData["Title"] = "طلب إجازة";
}

<div class="container-fluid mt-4" dir="rtl">
    <h2 class="text-end mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white text-end">
            <h4>إنشاء طلب إجازة جديد</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateTimeOutRequest" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="RequestDate" class="form-label float-end">تاريخ الطلب</label>
                        <input asp-for="RequestDate" type="date" class="form-control text-end" />
                        <span asp-validation-for="RequestDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmployeeName" class="form-label float-end">اسم الموظف</label>
                        <input asp-for="EmployeeName" class="form-control text-end" readonly />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TimeOutType" class="form-label float-end">نوع الإجازة</label>
                        <select asp-for="TimeOutType" class="form-select text-end">
                            <option value="">اختر نوع الإجازة</option>
                            <option value="SickLeave">إجازة مرضية</option>
                            <option value="AnnualLeave">إجازة سنوية</option>
                            <option value="EmergencyLeave">إجازة طارئة</option>
                        </select>
                        <span asp-validation-for="TimeOutType" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label float-end">تاريخ البدء</label>
                        <input asp-for="StartDate" type="date" class="form-control text-end" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label float-end">تاريخ الانتهاء</label>
                        <input asp-for="EndDate" type="date" class="form-control text-end" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Reason" class="form-label float-end">السبب</label>
                        <textarea asp-for="Reason" class="form-control text-end" rows="3"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">إرسال الطلب</button>
                    <button type="reset" class="btn btn-secondary">إلغاء</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white text-end">
            <h4>طلبات الإجازة الحالية</h4>
        </div>
        <div class="card-body">
            @if (Model.TimeOutRequests != null && Model.TimeOutRequests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-end">
                        <thead>
                            <tr>
                                <th>تاريخ الطلب</th>
                                <th>اسم الموظف</th>
                                <th>نوع الإجازة</th>
                                <th>تاريخ البدء</th>
                                <th>تاريخ الانتهاء</th>
                                <th>الحالة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.TimeOutRequests)
                            {
                                <tr>
                                    <td>@request.RequestDate.ToShortDateString()</td>
                                    <td>@request.EmployeeName</td>
                                    <td>@request.TimeOutType</td>
                                    <td>@request.StartDate.ToShortDateString()</td>
                                    <td>@request.EndDate.ToShortDateString()</td>
                                    <td>@request.Status</td>
                                    <td>
                                        <a asp-action="EditTimeOutRequest" asp-route-id="@request.Id" class="btn btn-sm btn-warning">تعديل</a>
                                        <a asp-action="DetailsTimeOutRequest" asp-route-id="@request.Id" class="btn btn-sm btn-info">تفاصيل</a>
                                        <a asp-action="DeleteTimeOutRequest" asp-route-id="@request.Id" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center">لا توجد طلبات إجازة حالية.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
