@using SAFA_ECC_Core_Clean.ViewModels
@model ReturnDiscountChqViewModel

@{ 
    ViewData["Title"] = "شيكات الخصم المرتجعة الصادرة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white text-end">
                    <h3 class="card-title mb-0">شيكات الخصم المرتجعة الصادرة</h3>
                </div>
                <div class="card-body">
                    <form dir="rtl">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="chqNumber" class="form-label float-end">رقم الشيك:</label>
                                <input type="text" class="form-control text-end" id="chqNumber" placeholder="أدخل رقم الشيك">
                            </div>
                            <div class="col-md-6">
                                <label for="chqDate" class="form-label float-end">تاريخ الشيك:</label>
                                <input type="date" class="form-control text-end" id="chqDate">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="bankName" class="form-label float-end">اسم البنك:</label>
                                <input type="text" class="form-control text-end" id="bankName" placeholder="أدخل اسم البنك">
                            </div>
                            <div class="col-md-6">
                                <label for="amount" class="form-label float-end">المبلغ:</label>
                                <input type="number" class="form-control text-end" id="amount" placeholder="أدخل المبلغ">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="notes" class="form-label float-end">ملاحظات:</label>
                                <textarea class="form-control text-end" id="notes" rows="3" placeholder="أدخل أي ملاحظات"></textarea>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">حفظ</button>
                            <button type="reset" class="btn btn-secondary">إلغاء</button>
                        </div>
                    </form>

                    <hr />

                    <h4 class="text-end mb-3">قائمة الشيكات المرتجعة</h4>
                    <div class="table-responsive" dir="rtl">
                        <table class="table table-bordered table-striped text-end">
                            <thead>
                                <tr>
                                    <th>رقم الشيك</th>
                                    <th>تاريخ الشيك</th>
                                    <th>اسم البنك</th>
                                    <th>المبلغ</th>
                                    <th>ملاحظات</th>
                                    <th>إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* Placeholder for data from Model.ReturnDiscountChqs *@
                                @if (Model != null && Model.ReturnDiscountChqs != null)
                                {
                                    foreach (var item in Model.ReturnDiscountChqs)
                                    {
                                        <tr>
                                            <td>@item.ChqNumber</td>
                                            <td>@item.ChqDate.ToShortDateString()</td>
                                            <td>@item.BankName</td>
                                            <td>@item.Amount.ToString("N2")</td>
                                            <td>@item.Notes</td>
                                            <td>
                                                <button class="btn btn-info btn-sm">تعديل</button>
                                                <button class="btn btn-danger btn-sm">حذف</button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6">لا توجد بيانات لعرضها.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript for any client-side functionality
        $(document).ready(function () {
            // Example: Add validation or dynamic behavior here
        });
    </script>
}