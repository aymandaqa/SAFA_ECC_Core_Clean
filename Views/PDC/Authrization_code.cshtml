                                        <td>
                                            <a asp-action="EditAuthrizationCode" asp-route-id="@item.Id" class="btn btn-sm btn-warning">تعديل</a>
                                            <a asp-action="DeleteAuthrizationCode" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                } *@
