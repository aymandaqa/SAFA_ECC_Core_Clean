                                        <button class="btn btn-sm btn-danger">حذف</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>PDC002</td>
                                    <td>رمز تفويض للمشروع ب</td>
                                    <td>غير نشط</td>
