@using SAFA_ECC_Core_Clean.ViewModels
@model PDCCHQStatusViewModel

@{ 
    ViewData["Title"] = "حالة الشيكات/الشيكات المؤجلة";
}

<div dir="rtl">
    <h1 class="text-right">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white text-right">
                    <h5 class="mb-0">بحث عن حالة الشيك</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row mb-3">
                            <label for="chequeNumber" class="col-sm-3 col-form-label text-right">رقم الشيك:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="chequeNumber" placeholder="أدخل رقم الشيك">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="bankName" class="col-sm-3 col-form-label text-right">اسم البنك:</label>
                            <div class="col-sm-9">
                                <select class="form-select" id="bankName">
                                    <option selected>اختر البنك...</option>
                                    <option value="1">بنك 1</option>
                                    <option value="2">بنك 2</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="status" class="col-sm-3 col-form-label text-right">الحالة:</label>
                            <div class="col-sm-9">
                                <select class="form-select" id="status">
                                    <option selected>اختر الحالة...</option>
                                    <option value="1">صادر</option>
                                    <option value="2">مستلم</option>
                                    <option value="3">مرفوض</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">بحث</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white text-right">
                    <h5 class="mb-0">نتائج البحث</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered text-right">
                            <thead>
                                <tr>
                                    <th>رقم الشيك</th>
                                    <th>اسم البنك</th>
                                    <th>تاريخ الاستحقاق</th>
                                    <th>المبلغ</th>
                                    <th>الحالة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>12345</td>
                                    <td>بنك 1</td>
                                    <td>2025-10-01</td>
                                    <td>1000.00</td>
                                    <td>صادر</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>67890</td>
                                    <td>بنك 2</td>
                                    <td>2025-11-15</td>
                                    <td>2500.00</td>
                                    <td>مستلم</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
        $(document).ready(function () {
            // مثال: تهيئة أي مكونات Bootstrap JavaScript
        });
    </script>
}