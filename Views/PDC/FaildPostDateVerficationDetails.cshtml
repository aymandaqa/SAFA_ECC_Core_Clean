@using SAFA_ECC_Core_Clean.ViewModels
@model SAFA_ECC_Core_Clean.ViewModels.FaildPostDateVerficationDetailsViewModel

@{
    ViewData["Title"] = "تفاصيل التحقق من تاريخ النشر الفاشل";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAFA_ECC_Core</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            direction: rtl;
            text-align: right;
        }
        .container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div class="card mt-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">تفاصيل الخطأ</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">معرف المستند:</dt>
                    <dd class="col-sm-9">@Model.DocumentId</dd>

                    <dt class="col-sm-3">تاريخ النشر الفعلي:</dt>
                    <dd class="col-sm-9">@(Model.ActualPostDate?.ToShortDateString())</dd>

                    <dt class="col-sm-3">تاريخ النشر المتوقع:</dt>
                    <dd class="col-sm-9">@(Model.ExpectedPostDate?.ToShortDateString())</dd>

                    <dt class="col-sm-3">رسالة الخطأ:</dt>
                    <dd class="col-sm-9">@Model.ErrorMessage</dd>

                    <dt class="col-sm-3">وقت التحقق:</dt>
                    <dd class="col-sm-9">@(Model.VerificationTimestamp?.ToString("g"))</dd>
                </dl>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">إجراءات مقترحة</h4>
            </div>
            <div class="card-body">
                <p>يمكنك اتخاذ الإجراءات التالية لمعالجة المشكلة:</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">التحقق من صحة تاريخ النشر في المستند الأصلي.</li>
                    <li class="list-group-item">تعديل تاريخ النشر ليتوافق مع المتطلبات.</li>
                    <li class="list-group-item">إعادة محاولة عملية النشر بعد التصحيح.</li>
                </ul>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-right"></i> العودة إلى القائمة</a>
        </div>
    </div>
</body>
</html>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

