@model SAFA_ECC_Core_Clean.ViewModels.PDCViewModels.PDCIndexViewModel

@{
    ViewData["Title"] = "الشيكات المؤجلة";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>
                            الشيكات المؤجلة (PDC)
                        </h4>
                        <div>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>
                                إضافة شيك مؤجل
                            </a>
                            <a asp-action="Statistics" class="btn btn-warning">
                                <i class="fas fa-chart-bar me-1"></i>
                                الإحصائيات
                            </a>
                            <a asp-action="DueToday" class="btn btn-danger">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                مستحقة اليوم
                            </a>
                            <a asp-action="Overdue" class="btn btn-dark">
                                <i class="fas fa-clock me-1"></i>
                                متأخرة
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Search Form -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="SearchModel.ChqSequance" class="form-label"></label>
                                <input asp-for="SearchModel.ChqSequance" class="form-control" placeholder="رقم التسلسل" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.DrwChqNo" class="form-label"></label>
                                <input asp-for="SearchModel.DrwChqNo" class="form-control" placeholder="رقم الشيك" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.DrwAcctNo" class="form-label"></label>
                                <input asp-for="SearchModel.DrwAcctNo" class="form-control" placeholder="رقم الحساب" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.BenName" class="form-label"></label>
                                <input asp-for="SearchModel.BenName" class="form-control" placeholder="اسم المستفيد" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.FromDate" class="form-label"></label>
                                <input asp-for="SearchModel.FromDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.ToDate" class="form-label"></label>
                                <input asp-for="SearchModel.ToDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.FromDueDate" class="form-label"></label>
                                <input asp-for="SearchModel.FromDueDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.ToDueDate" class="form-label"></label>
                                <input asp-for="SearchModel.ToDueDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.Status" class="form-label"></label>
                                <select asp-for="SearchModel.Status" class="form-select">
                                    <option value="">جميع الحالات</option>
                                    <option value="NEW">جديد</option>
                                    <option value="PENDING">في الانتظار</option>
                                    <option value="AUTHORIZED">معتمد</option>
                                    <option value="CONVERTED">محول</option>
                                    <option value="CANCELLED">ملغي</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-1"></i>
                                        بحث
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Quick Filters -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="btn-group" role="group">
                                    <input type="checkbox" class="btn-check" id="dueToday" asp-for="SearchModel.DueToday" />
                                    <label class="btn btn-outline-danger" for="dueToday">مستحقة اليوم</label>

                                    <input type="checkbox" class="btn-check" id="overdue" asp-for="SearchModel.Overdue" />
                                    <label class="btn btn-outline-dark" for="overdue">متأخرة</label>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Results Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>التسلسل</th>
                                    <th>رقم الشيك</th>
                                    <th>رقم الحساب</th>
                                    <th>المبلغ</th>
                                    <th>اسم المستفيد</th>
                                    <th>تاريخ المعاملة</th>
                                    <th>تاريخ الاستحقاق</th>
                                    <th>أيام التحصيل</th>
                                    <th>الحالة</th>
                                    <th>العمليات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Transactions.Any())
                                {
                                    @foreach (var item in Model.Transactions)
                                    {
                                        var daysUntilDue = item.DueDate.HasValue ? (item.DueDate.Value - DateTime.Today).Days : 0;
                                        var rowClass = "";
                                        if (item.DueDate.HasValue)
                                        {
                                            if (item.DueDate.Value < DateTime.Today)
                                                rowClass = "table-danger"; // Overdue
                                            else if (item.DueDate.Value == DateTime.Today)
                                                rowClass = "table-warning"; // Due today
                                            else if (daysUntilDue <= 7)
                                                rowClass = "table-info"; // Due within a week
                                        }
                                        
                                        <tr class="@rowClass">
                                            <td>@item.Serial</td>
                                            <td>@item.DrwChqNo</td>
                                            <td>@item.DrwAcctNo</td>
                                            <td class="text-end">
                                                <span class="fw-bold text-success">
                                                    @(item.Amount.ToString("N2")) @item.Currency
                                                </span>
                                            </td>
                                            <td>@item.BenName</td>
                                            <td>@item.TransDate?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @item.DueDate?.ToString("dd/MM/yyyy")
                                                @if (item.DueDate.HasValue)
                                                {
                                                    @if (daysUntilDue < 0)
                                                    {
                                                        <br><small class="text-danger">متأخر @Math.Abs(daysUntilDue) يوم</small>
                                                    }
                                                    else if (daysUntilDue == 0)
                                                    {
                                                        <br><small class="text-warning">مستحق اليوم</small>
                                                    }
                                                    else if (daysUntilDue <= 7)
                                                    {
                                                        <br><small class="text-info">خلال @daysUntilDue أيام</small>
                                                    }
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (item.CollDays.HasValue)
                                                {
                                                    <span class="badge bg-secondary">@item.CollDays.Value.ToString("N0")</span>
                                                }
                                            </td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case "NEW":
                                                        <span class="badge bg-info">جديد</span>
                                                        break;
                                                    case "PENDING":
                                                        <span class="badge bg-warning">في الانتظار</span>
                                                        break;
                                                    case "AUTHORIZED":
                                                        <span class="badge bg-success">معتمد</span>
                                                        break;
                                                    case "CONVERTED":
                                                        <span class="badge bg-primary">محول</span>
                                                        break;
                                                    case "CANCELLED":
                                                        <span class="badge bg-danger">ملغي</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@item.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Serial" 
                                                       class="btn btn-sm btn-outline-primary" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Serial" 
                                                       class="btn btn-sm btn-outline-warning" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (item.Status == "AUTHORIZED" && item.DueDate <= DateTime.Today)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-success" 
                                                                onclick="convertToOutward(@item.Serial)" title="تحويل إلى صادر">
                                                            <i class="fas fa-exchange-alt"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-calendar-times fa-3x mb-3"></i>
                                                <p>لا توجد شيكات مؤجلة</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Transactions.Count == 100)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            تم عرض أول 100 نتيجة فقط. يرجى استخدام البحث لتضييق النتائج.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Convert to Outward Form -->
<form id="convertToOutwardForm" asp-action="ConvertToOutward" method="post" style="display: none;">
    <input type="hidden" id="convertId" name="id" />
</form>

@section Scripts {
    <script>
        function convertToOutward(id) {
            if (confirm('هل أنت متأكد من تحويل هذا الشيك المؤجل إلى شيك صادر؟')) {
                document.getElementById('convertId').value = id;
                document.getElementById('convertToOutwardForm').submit();
            }
        }

        // Auto-submit form on status change
        document.querySelector('select[name="SearchModel.Status"]').addEventListener('change', function() {
            this.form.submit();
        });

        // Auto-submit form on checkbox change
        document.querySelectorAll('input[type="checkbox"].btn-check').forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                this.form.submit();
            });
        });

        // Format currency inputs
        document.querySelectorAll('input[name*="Amount"]').forEach(function(input) {
            input.addEventListener('input', function() {
                let value = this.value.replace(/[^\d.]/g, '');
                if (value) {
                    this.value = parseFloat(value).toLocaleString('en-US', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    });
                }
            });
        });

        // Highlight due dates
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            
            document.querySelectorAll('tr').forEach(function(row) {
                const dueDateCell = row.cells[6]; // Due date column
                if (dueDateCell && dueDateCell.textContent.includes('/')) {
                    const dateText = dueDateCell.textContent.split('\n')[0].trim();
                    const dateParts = dateText.split('/');
                    if (dateParts.length === 3) {
                        const dueDate = new Date(dateParts[2], dateParts[1] - 1, dateParts[0]);
                        const diffTime = dueDate - today;
                        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                        
                        if (diffDays < 0) {
                            row.classList.add('table-danger');
                        } else if (diffDays === 0) {
                            row.classList.add('table-warning');
                        } else if (diffDays <= 7) {
                            row.classList.add('table-info');
                        }
                    }
                }
            });
        });
    </script>
}

