@using SAFA_ECC_Core_Clean.ViewModels
@model OutwardParameterViewModel

@{ 
    ViewData["Title"] = "معلمات الصادر";
}

<div dir="rtl" lang="ar">
    <h1 class="text-right">معلمات الصادر</h1>

    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">إدارة معلمات الصادر</h5>
        </div>
        <div class="card-body">
            <form asp-action="SaveOutwardParameter" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ParameterName" class="form-label"></label>
                        <input asp-for="ParameterName" class="form-control" />
                        <span asp-validation-for="ParameterName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ParameterValue" class="form-label"></label>
                        <input asp-for="ParameterValue" class="form-control" />
                        <span asp-validation-for="ParameterValue" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">حفظ</button>
                    <button type="reset" class="btn btn-secondary">إلغاء</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">قائمة معلمات الصادر</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped text-right">
                <thead>
                    <tr>
                        <th>الاسم</th>
                        <th>القيمة</th>
                        <th>الوصف</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.OutwardParameters != null && Model.OutwardParameters.Any())
                    {
                        @foreach (var item in Model.OutwardParameters)
                        {
                            <tr>
                                <td>@item.ParameterName</td>
                                <td>@item.ParameterValue</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="EditOutwardParameter" asp-route-id="@item.Id" class="btn btn-sm btn-info">تعديل</a>
                                    <a asp-action="DeleteOutwardParameter" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">لا توجد معلمات صادر لعرضها.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
