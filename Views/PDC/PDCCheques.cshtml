@model SAFA_ECC_Core_Clean.ViewModels.PDCViewModels.ChequesViewModel

@{ 
    ViewData["Title"] = "إدارة الشيكات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h2 class="text-end mb-4">@ViewData["Title"]</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-end">بحث عن شيكات</h6>
        </div>
        <div class="card-body">
            <form class="row g-3 justify-content-end">
                <div class="col-md-4">
                    <label for="chequeNumber" class="form-label text-end w-100">رقم الشيك:</label>
                    <input type="text" class="form-control text-end" id="chequeNumber" placeholder="أدخل رقم الشيك">
                </div>
                <div class="col-md-4">
                    <label for="accountNumber" class="form-label text-end w-100">رقم الحساب:</label>
                    <input type="text" class="form-control text-end" id="accountNumber" placeholder="أدخل رقم الحساب">
                </div>
                <div class="col-md-4 d-flex align-items-end justify-content-end">
                    <button type="submit" class="btn btn-primary">بحث</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4 mt-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary text-end">قائمة الشيكات</h6>
            <button class="btn btn-success">إضافة شيك جديد</button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-end" id="chequesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>رقم الشيك</th>
                            <th>تاريخ الاستحقاق</th>
                            <th>المبلغ</th>
                            <th>اسم المستفيد</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* هنا سيتم عرض بيانات الشيكات من ViewModel *@
                        @if (Model != null && Model.Cheques != null)
                        {
                            @foreach (var cheque in Model.Cheques)
                            {
                                <tr>
                                    <td>@cheque.ChequeNumber</td>
                                    <td>@cheque.DueDate.ToShortDateString()</td>
                                    <td>@cheque.Amount.ToString("N2")</td>
                                    <td>@cheque.PayeeName</td>
                                    <td>@cheque.Status</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                        <button class="btn btn-danger btn-sm">حذف</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">لا توجد شيكات لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // يمكن إضافة أي سكريبتات خاصة بالصفحة هنا
        $(document).ready(function () {
            // تهيئة أي مكونات Bootstrap أو جداول بيانات هنا
        });
    </script>
}