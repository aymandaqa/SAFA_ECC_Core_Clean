@model SAFA_ECC_Core_Clean.ViewModels.PDCViewModels.PDC_OUTWORD_ViewModel

@{
    ViewData["Title"] = "صادر PDC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div dir="rtl" class="container-fluid">
    <h1 class="text-center mb-4">صادر PDC</h1>


    <div class="card mb-4">
        <div class="card-header">بيانات الصادر</div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="DocumentNumber" class="form-label"></label>
                        <input asp-for="DocumentNumber" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DocumentDate" class="form-label"></label>
                        <input asp-for="DocumentDate" class="form-control" type="date" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Subject" class="form-label"></label>
                        <input asp-for="Subject" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Sender" class="form-label"></label>
                        <input asp-for="Sender" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Receiver" class="form-label"></label>
                        <input asp-for="Receiver" class="form-control" />
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">حفظ</button>
                    <button type="reset" class="btn btn-secondary">إلغاء</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">قائمة المستندات الصادرة</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Html.DisplayNameFor(model => model.DocumentNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.DocumentDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Subject)</th>
                            <th>@Html.DisplayNameFor(model => model.Sender)</th>
                            <th>@Html.DisplayNameFor(model => model.Receiver)</th>
                            <th>إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OutwordDocuments != null && Model.OutwordDocuments.Any())
                        {
                            @foreach (var item in Model.OutwordDocuments)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.DocumentNumber</td>
                                    <td>@item.DocumentDate.ToShortDateString()</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Sender</td>
                                    <td>@item.Receiver</td>
                                    <td>
                                        <button class="btn btn-info btn-sm">عرض</button>
                                        <button class="btn btn-warning btn-sm">تعديل</button>
                                        <button class="btn btn-danger btn-sm">حذف</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">لا توجد مستندات صادرة لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    <!-- Placeholder for page-specific scripts -->
}
