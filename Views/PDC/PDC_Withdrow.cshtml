@* PDC/PDC_Withdrow.cshtml *@
@using SAFA_ECC_Core_Clean.ViewModels
@model PDCWithdrowViewModel

@{ 
    ViewData["Title"] = "سحب شيكات PDC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4" dir="rtl">
    <h2 class="text-end mb-4">سحب شيكات PDC</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white text-end">
            <h5 class="mb-0">معلومات الشيك</h5>
        </div>
        <div class="card-body">
            <form asp-action="WithdrowPDC" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="PDCNumber" class="form-label float-end">رقم الشيك:</label>
                        <input asp-for="PDCNumber" class="form-control text-end" />
                        <span asp-validation-for="PDCNumber" class="text-danger float-end"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PDCDate" class="form-label float-end">تاريخ الشيك:</label>
                        <input asp-for="PDCDate" type="date" class="form-control text-end" />
                        <span asp-validation-for="PDCDate" class="text-danger float-end"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Amount" class="form-label float-end">المبلغ:</label>
                        <input asp-for="Amount" class="form-control text-end" />
                        <span asp-validation-for="Amount" class="text-danger float-end"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BeneficiaryName" class="form-label float-end">اسم المستفيد:</label>
                        <input asp-for="BeneficiaryName" class="form-control text-end" />
                        <span asp-validation-for="BeneficiaryName" class="text-danger float-end"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="ReasonForWithdrow" class="form-label float-end">سبب السحب:</label>
                        <textarea asp-for="ReasonForWithdrow" class="form-control text-end" rows="3"></textarea>
                        <span asp-validation-for="ReasonForWithdrow" class="text-danger float-end"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">سحب الشيك</button>
                    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white text-end">
            <h5 class="mb-0">سجل سحب الشيكات</h5>
        </div>
        <div class="card-body">
            @if (Model.WithdrowHistory != null && Model.WithdrowHistory.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered text-end">
                        <thead>
                            <tr>
                                <th>رقم الشيك</th>
                                <th>تاريخ السحب</th>
                                <th>المبلغ</th>
                                <th>المستفيد</th>
                                <th>السبب</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.WithdrowHistory)
                            {
                                <tr>
                                    <td>@item.PDCNumber</td>
                                    <td>@item.WithdrowDate.ToShortDateString()</td>
                                    <td>@item.Amount.ToString("N2")</td>
                                    <td>@item.BeneficiaryName</td>
                                    <td>@item.Reason</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center">لا يوجد سجل لسحب الشيكات.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
