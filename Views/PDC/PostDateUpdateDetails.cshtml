
@{
    ViewData["Title"] = "تفاصيل تحديث تاريخ ما بعد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">تفاصيل تحديث تاريخ ما بعد</h1>

<div class="container-fluid" dir="rtl">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-end">
                    <h4 class="mb-0">معلومات التحديث</h4>
                </div>
                <div class="card-body">
                    <form asp-action="PostDateUpdateDetails" method="post">
                        <div class="mb-3 row">
                            <label for="ItemId" class="col-sm-4 col-form-label text-sm-end">معرف العنصر:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="ItemId" name="ItemId" value="12345" readonly>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="CurrentDate" class="col-sm-4 col-form-label text-sm-end">التاريخ الحالي:</label>
                            <div class="col-sm-8">
                                <input type="date" class="form-control" id="CurrentDate" name="CurrentDate" value="2025-09-16" readonly>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="NewDate" class="col-sm-4 col-form-label text-sm-end">التاريخ الجديد:</label>
                            <div class="col-sm-8">
                                <input type="date" class="form-control" id="NewDate" name="NewDate" value="2025-10-16">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="Reason" class="col-sm-4 col-form-label text-sm-end">السبب:</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="Reason" name="Reason" rows="3">سبب التحديث هنا...</textarea>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-success me-md-2">حفظ التحديث</button>
                            <a href="#" class="btn btn-secondary">إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white text-end">
                    <h4 class="mb-0">سجل التحديثات</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered text-end">
                            <thead>
                                <tr>
                                    <th>التاريخ القديم</th>
                                    <th>التاريخ الجديد</th>
                                    <th>المحدث بواسطة</th>
                                    <th>تاريخ التحديث</th>
                                    <th>السبب</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2025-09-01</td>
                                    <td>2025-09-16</td>
                                    <td>المستخدم أ</td>
                                    <td>2025-09-16 10:00</td>
                                    <td>تعديل بناءً على طلب العميل</td>
                                </tr>
                                <tr>
                                    <td>2025-08-15</td>
                                    <td>2025-09-01</td>
                                    <td>المستخدم ب</td>
                                    <td>2025-08-30 14:30</td>
                                    <td>خطأ في الإدخال الأولي</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
