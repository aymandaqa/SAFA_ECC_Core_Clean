@using SAFA_ECC_Core_Clean.ViewModels
@{
    ViewData["Title"] = "تقارير البنوك";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-right mb-4">تقارير البنوك</h1>

    <!-- Placeholder for forms, tables, and buttons -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-right">فلترة التقارير</h5>
                </div>
                <div class="card-body">

                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="startDate" class="form-label">تاريخ البدء</label>
                                <input type="date" class="form-control" id="startDate">
                            </div>
                            <div class="col-md-6">
                                <label for="endDate" class="form-label">تاريخ الانتهاء</label>
                                <input type="date" class="form-control" id="endDate">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="bankName" class="form-label">اسم البنك</label>
                                <select class="form-select" id="bankName">
                                    <option selected>اختر بنك...</option>
                                    <option value="1">البنك الأهلي</option>
                                    <option value="2">بنك الراجحي</option>
                                    <option value="3">بنك الرياض</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="reportType" class="form-label">نوع التقرير</label>
                                <select class="form-select" id="reportType">
                                    <option selected>اختر نوع التقرير...</option>
                                    <option value="1">تقرير يومي</option>
                                    <option value="2">تقرير شهري</option>
                                    <option value="3">تقرير سنوي</option>
                                </select>
                            </div>
                        </div>
                        <div class="text-left">
                            <button type="submit" class="btn btn-primary">عرض التقرير</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-right">نتائج التقارير</h5>
                </div>
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">اسم البنك</th>
                                    <th scope="col">تاريخ التقرير</th>
                                    <th scope="col">نوع التقرير</th>
                                    <th scope="col">المبلغ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>البنك الأهلي</td>
                                    <td>2023-01-01</td>
                                    <td>يومي</td>
                                    <td>10,000.00</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>بنك الراجحي</td>
                                    <td>2023-01-01</td>
                                    <td>يومي</td>
                                    <td>15,000.00</td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>بنك الرياض</td>
                                    <td>2023-01-01</td>
                                    <td>يومي</td>
                                    <td>12,500.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-left mt-3">
                        <button type="button" class="btn btn-success me-2">تصدير إلى Excel</button>
                        <button type="button" class="btn btn-danger">تصدير إلى PDF</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add any necessary scripts here -->
}

