
@page
@model SAFA_ECC_Core_Clean.ViewModels.ReportViewModels.TransactionReportsViewModel

@{ 
    ViewData["Title"] = "تقارير المعاملات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-right mb-4">@ViewData["Title"]</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-right">فلترة التقارير</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="startDate" class="form-label float-end">تاريخ البدء:</label>
                        <input type="date" class="form-control text-right" id="startDate" asp-for="StartDate">
                    </div>
                    <div class="col-md-4">
                        <label for="endDate" class="form-label float-end">تاريخ الانتهاء:</label>
                        <input type="date" class="form-control text-right" id="endDate" asp-for="EndDate">
                    </div>
                    <div class="col-md-4">
                        <label for="transactionType" class="form-label float-end">نوع المعاملة:</label>
                        <select class="form-select text-right" id="transactionType" asp-for="TransactionType">
                            <option value="">الكل</option>
                            <option value="Deposit">إيداع</option>
                            <option value="Withdrawal">سحب</option>
                            <option value="Transfer">تحويل</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="accountNumber" class="form-label float-end">رقم الحساب:</label>
                        <input type="text" class="form-control text-right" id="accountNumber" asp-for="AccountNumber">
                    </div>
                    <div class="col-md-4">
                        <label for="minAmount" class="form-label float-end">الحد الأدنى للمبلغ:</label>
                        <input type="number" class="form-control text-right" id="minAmount" asp-for="MinAmount">
                    </div>
                    <div class="col-md-4">
                        <label for="maxAmount" class="form-label float-end">الحد الأقصى للمبلغ:</label>
                        <input type="number" class="form-control text-right" id="maxAmount" asp-for="MaxAmount">
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">تطبيق الفلتر</button>
                    <button type="reset" class="btn btn-secondary">إعادة تعيين</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-right">نتائج تقارير المعاملات</h6>
        </div>
        <div class="card-body">
            @if (Model.Transactions != null && Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered text-right" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>تاريخ المعاملة</th>
                                <th>نوع المعاملة</th>
                                <th>المبلغ</th>
                                <th>رقم الحساب</th>
                                <th>الوصف</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.TransactionDate.ToShortDateString()</td>
                                    <td>@transaction.TransactionType</td>
                                    <td>@transaction.Amount.ToString("C")</td>
                                    <td>@transaction.AccountNumber</td>
                                    <td>@transaction.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center">لا توجد معاملات لعرضها بناءً على الفلاتر المحددة.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // يمكنك إضافة أي سكريبتات خاصة بالصفحة هنا، مثل تهيئة Datatables أو معالجة AJAX
        $(document).ready(function() {
            // مثال لتهيئة Datatables (يتطلب تضمين مكتبة Datatables في _Layout.cshtml)
            // $(\'#dataTable\').DataTable();
        });
    </script>
}
