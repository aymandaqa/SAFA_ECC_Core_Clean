
@model SAFA_ECC_Core_Clean.ViewModels.UserReportsViewModel

@{
    ViewData["Title"] = "تقارير المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-end">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-12">
            <!-- Content for forms, tables, and buttons will go here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript for this page
    </script>
}




<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">خيارات التقرير</h5>
    </div>
    <div class="card-body">
        <form asp-action="UserReports" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="StartDate" class="form-label">تاريخ البدء:</label>
                    <input type="date" class="form-control" id="StartDate" name="StartDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? string.Empty)" />
                </div>
                <div class="col-md-4">
                    <label for="EndDate" class="form-label">تاريخ الانتهاء:</label>
                    <input type="date" class="form-control" id="EndDate" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? string.Empty)" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">عرض التقرير</button>
                    <button type="button" class="btn btn-secondary" onclick="window.print()">طباعة</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">نتائج التقرير</h5>
    </div>
    <div class="card-body">
        @if (Model.UserActivities != null && Model.UserActivities.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-end">
                    <thead>
                        <tr>
                            <th>اسم المستخدم</th>
                            <th>النشاط</th>
                            <th>التاريخ</th>
                            <th>الوصف</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var activity in Model.UserActivities)
                        {
                            <tr>
                                <td>@activity.UserName</td>
                                <td>@activity.Activity</td>
                                <td>@activity.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@activity.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                لا توجد أنشطة مستخدمين لعرضها في الفترة المحددة.
            </div>
        }
    </div>
</div>

