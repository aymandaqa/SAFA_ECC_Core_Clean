@model SAFA_ECC_Core_Clean.ViewModels.AuditLogsViewModel

@{ 
    ViewData["Title"] = "سجل التدقيق";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-end">@ViewData["Title"]</h1>

    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">بحث وتصفية</h5>
        </div>
        <div class="card-body">
            <form asp-action="AuditLog" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="userName" class="form-label">اسم المستخدم:</label>
                        <input type="text" class="form-control" id="userName" name="userName" value="@Model.UserNameFilter" />
                    </div>
                    <div class="col-md-4">
                        <label for="action" class="form-label">العملية:</label>
                        <input type="text" class="form-control" id="action" name="action" value="@Model.ActionFilter" />
                    </div>
                    <div class="col-md-4">
                        <label for="startDate" class="form-label">من تاريخ:</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDateFilter?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label for="endDate" class="form-label">إلى تاريخ:</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDateFilter?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">بحث</button>
                        <a asp-action="AuditLog" class="btn btn-secondary">مسح التصفية</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5 class="mb-0">سجلات التدقيق</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>التاريخ والوقت</th>
                            <th>المستخدم</th>
                            <th>العملية</th>
                            <th>الوصف</th>
                            <th>عنوان IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.AuditLogs != null && Model.AuditLogs.Any())
                        {
                            @foreach (var log in Model.AuditLogs)
                            {
                                <tr>
                                    <td>@log.Timestamp</td>
                                    <td>@log.UserName</td>
                                    <td>@log.Action</td>
                                    <td>@log.Description</td>
                                    <td>@log.IPAddress</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">لا توجد سجلات تدقيق لعرضها.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

