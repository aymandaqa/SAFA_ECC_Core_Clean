@page
@model SAFA_ECC_Core_Clean.ViewModels.SystemViewModels.RoleManagementViewModel

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "إدارة الأدوار";
}

<div class="container-fluid" dir="rtl" lang="ar">
    <h1 class="text-right">@ViewData["Title"]</h1>
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">إضافة / تعديل دور</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="RoleName" class="form-label">اسم الدور</label>
                            <input type="text" class="form-control" id="RoleName" asp-for="RoleName" required>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="IsActive" asp-for="IsActive">
                            <label class="form-check-label" for="IsActive">نشط</label>
                        </div>
                        <button type="submit" class="btn btn-primary">حفظ الدور</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">الأدوار الحالية</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>اسم الدور</th>
                                <th>نشط</th>
                                <th>إجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Roles != null && Model.Roles.Any())
                            {
                                @foreach (var role in Model.Roles)
                                {
                                    <tr>
                                        <td>@role.RoleName</td>
                                        <td>@(role.IsActive ? "نعم" : "لا")</td>
                                        <td>
                                            <a asp-page-handler="Edit" asp-route-id="@role.RoleId" class="btn btn-sm btn-info">تعديل</a>
                                            <a asp-page-handler="Delete" asp-route-id="@role.RoleId" class="btn btn-sm btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center">لا توجد أدوار لعرضها.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

