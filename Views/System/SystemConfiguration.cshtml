@using SAFA_ECC_Core_Clean.ViewModels
@model SAFA_ECC_Core_Clean.ViewModels.AdminViewModels.SystemConfigurationViewModel

@{ 
    ViewData["Title"] = "إعدادات النظام";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" dir="rtl">
    <h1 class="text-right mb-4">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white text-right">
            <h5 class="mb-0">إعدادات عامة</h5>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <label for="setting1" class="col-md-3 col-form-label text-md-right">الإعداد الأول:</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="setting1" asp-for="Setting1" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="setting2" class="col-md-3 col-form-label text-md-right">الإعداد الثاني:</label>
                    <div class="col-md-9">
                        <select class="form-select" id="setting2" asp-for="Setting2">
                            <option value="option1">الخيار الأول</option>
                            <option value="option2">الخيار الثاني</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-9 offset-md-3">
                        <div class="form-check form-switch">                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" asp-for="IsEnabled">
                            <label class="form-check-label" for="flexSwitchCheckDefault">تفعيل الميزة</label>
                        </div>
                    </div>
                </div>
                <div class="text-left">
                    <button type="submit" class="btn btn-success">حفظ التغييرات</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white text-right">
            <h5 class="mb-0">سجل التغييرات</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered text-right">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>التغيير</th>
                        <th>المستخدم</th>
                        <th>التاريخ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ChangeLogs != null && Model.ChangeLogs.Any())
                    {
                        @foreach (var log in Model.ChangeLogs!)
                        {
                            <tr>
                                <td>@log.Id</td>
                                <td>@log.Description</td>
                                <td>@log.User</td>
                                <td>@log.Date.ToShortDateString()</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">لا توجد سجلات تغييرات لعرضها.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // يمكنك إضافة أي سكربتات خاصة بالصفحة هنا
        $(document).ready(function () {
            console.log("صفحة إعدادات النظام جاهزة!");
        });
    </script>
}

