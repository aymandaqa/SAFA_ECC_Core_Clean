@model SAFA_ECC_Core_Clean.ViewModels.UsersViewModels.UserIndexViewModel

@{
    ViewData["Title"] = "إدارة المستخدمين";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-users me-2"></i>
                            إدارة المستخدمين
                        </h4>
                        <div>
                            <a asp-action="Create" class="btn btn-light">
                                <i class="fas fa-user-plus me-1"></i>
                                إضافة مستخدم جديد
                            </a>
                            <a asp-action="Statistics" class="btn btn-info">
                                <i class="fas fa-chart-pie me-1"></i>
                                الإحصائيات
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Search Form -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="SearchModel.UserName" class="form-label"></label>
                                <input asp-for="SearchModel.UserName" class="form-control" placeholder="اسم المستخدم" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.FullName" class="form-label"></label>
                                <input asp-for="SearchModel.FullName" class="form-control" placeholder="الاسم الكامل" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.Email" class="form-label"></label>
                                <input asp-for="SearchModel.Email" class="form-control" placeholder="البريد الإلكتروني" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.CompanyId" class="form-label"></label>
                                <select asp-for="SearchModel.CompanyId" class="form-select">
                                    <option value="">جميع الشركات</option>
                                    @foreach (var company in Model.Companies)
                                    {
                                        <option value="@company.Company_ID">@company.Company_Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SearchModel.GroupId" class="form-label"></label>
                                <select asp-for="SearchModel.GroupId" class="form-select">
                                    <option value="">جميع المجموعات</option>
                                    @foreach (var group in Model.Groups)
                                    {
                                        <option value="@group.Group_Id">@group.Group_Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.IsDisabled" class="form-label"></label>
                                <select asp-for="SearchModel.IsDisabled" class="form-select">
                                    <option value="">الكل</option>
                                    <option value="false">نشط</option>
                                    <option value="true">معطل</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="SearchModel.IsLockedOut" class="form-label"></label>
                                <select asp-for="SearchModel.IsLockedOut" class="form-select">
                                    <option value="">الكل</option>
                                    <option value="true">محظور</option>
                                    <option value="false">غير محظور</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search me-1"></i>
                                        بحث
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>
                                        مسح الفلاتر
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Results Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>اسم المستخدم</th>
                                    <th>الاسم الكامل</th>
                                    <th>البريد الإلكتروني</th>
                                    <th>الشركة</th>
                                    <th>المجموعة</th>
                                    <th>الحالة</th>
                                    <th>آخر تسجيل دخول</th>
                                    <th>العمليات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Users.Any())
                                {
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-2">
                                                        <div class="avatar-title bg-primary rounded-circle">
                                                            @(user.UserName?.Length > 0 ? user.UserName.Substring(0, 1).ToUpper() : "")
                                                        </div>
                                                    </div>
                                                    <strong>@user.UserName</strong>
                                                </div>
                                            </td>
                                            <td>@user.Full_Name</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.Email))
                                                {
                                                    <a href="mailto:@user.Email" class="text-decoration-none">
                                                        @user.Email
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.Companies_Tbl != null)
                                                {
                                                    <span class="badge bg-info">@user.Companies_Tbl.Company_Name</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.Groups_Tbl != null)
                                                {
                                                    <span class="badge bg-secondary">@user.Groups_Tbl.Group_Name</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    @if (user.IsDisabled == true || user.IsDisabled == null )
                                                    {
                                                        <span class="badge bg-danger">معطل</span>
                                                    }
                                                    else if (user.IsDisabled == false)
                                                    {
                                                        <span class="badge bg-success">نشط</span>
                                                    }
                                                    
                                                    @if (user.IsLockedOut == true)
                                                    {
                                                        <span class="badge bg-warning">محظور</span>
                                                    }
                                                    
                                                    @if (user.LoginStatus == true)
                                                    {
                                                        <span class="badge bg-primary">متصل</span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @if (user.LastLoginDate.HasValue)
                                                {
                                                    @user.LastLoginDate?.ToString("dd/MM/yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">لم يسجل دخول</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@user.User_ID" 
                                                       class="btn btn-sm btn-outline-primary" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@user.User_ID" 
                                                       class="btn btn-sm btn-outline-warning" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (user.IsLockedOut == true)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-success" 
                                                                onclick="unlockUser(@user.User_ID)" title="إلغاء الحظر">
                                                            <i class="fas fa-unlock"></i>
                                                        </button>
                                                    }
                                                    @if (user.IsDisabled == false)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                                onclick="disableUser(@user.User_ID)" title="تعطيل">
                                                            <i class="fas fa-ban"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-users fa-3x mb-3"></i>
                                                <p>لا يوجد مستخدمين</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary -->
                    @if (Model.Users.Any())
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <div class="row text-center">
                                        <div class="col-md-3">
                                            <strong>إجمالي المستخدمين:</strong>
                                            <span class="badge bg-primary fs-6">@Model.Users.Count</span>
                                        </div>
                                        <div class="col-md-3">
                                            <strong>النشطين:</strong>
                                            <span class="badge bg-success fs-6">@Model.Users.Count(u => u.IsDisabled == false)</span>
                                        </div>
                                        <div class="col-md-3">
                                            <strong>المعطلين:</strong>
                                            <span class="badge bg-danger fs-6">@Model.Users.Count(u => u.IsDisabled == true)</span>
                                        </div>
                                        <div class="col-md-3">
                                            <strong>المحظورين:</strong>
                                            <span class="badge bg-warning fs-6">@Model.Users.Count(u => u.IsLockedOut == true)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Unlock User Form -->
<form id="unlockUserForm" asp-action="UnlockUser" method="post" style="display: none;">
    <input type="hidden" id="unlockUserId" name="id" />
</form>

<!-- Disable User Form -->
<form id="disableUserForm" asp-action="Delete" method="post" style="display: none;">
    <input type="hidden" id="disableUserId" name="id" />
</form>

@section Scripts {
    <script>
        function unlockUser(userId) {
            if (confirm('هل أنت متأكد من إلغاء حظر هذا المستخدم؟')) {
                document.getElementById('unlockUserId').value = userId;
                document.getElementById('unlockUserForm').submit();
            }
        }

        function disableUser(userId) {
            if (confirm('هل أنت متأكد من تعطيل هذا المستخدم؟')) {
                document.getElementById('disableUserId').value = userId;
                document.getElementById('disableUserForm').submit();
            }
        }

        // Auto-submit form on select change
        document.querySelectorAll('select').forEach(function(select) {
            select.addEventListener('change', function() {
                if (this.name.includes('SearchModel')) {
                    this.form.submit();
                }
            });
        });

        // Avatar styling
        document.addEventListener('DOMContentLoaded', function() {
            const avatars = document.querySelectorAll('.avatar-title');
            const colors = ['bg-primary', 'bg-success', 'bg-info', 'bg-warning', 'bg-danger', 'bg-secondary'];
            
            avatars.forEach(function(avatar, index) {
                avatar.className = avatar.className.replace('bg-primary', colors[index % colors.length]);
            });
        });
    </script>

    <style>
        .avatar-sm {
            width: 32px;
            height: 32px;
        }
        
        .avatar-title {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            font-weight: bold;
        }
    </style>
}

